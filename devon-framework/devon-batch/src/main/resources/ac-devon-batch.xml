<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" 
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:aop="http://www.springframework.org/schema/aop"
	   xmlns:tx="http://www.springframework.org/schema/tx" 
       xmlns:si="http://www.springframework.org/schema/integration"
       xmlns:p="http://www.springframework.org/schema/p"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
           http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-2.5.xsd
		   http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-2.5.xsd
           http://www.springframework.org/schema/integration http://www.springframework.org/schema/integration/spring-integration-1.0.xsd"
    default-autowire="byName">

    <!--
        Message source for this context, loaded from localized "messages_xx" files.
    -->
    <bean id="fwk.messageSource" class="es.capgemini.devon.message.PatternReloadableResourceBundleMessageSource" abstract="true">
        <property name="basenames">
            <list>
                <value>classpath*:devon/resources/**/*Messages*</value>
                <value>classpath*:plugins/messages/*</value>
                <value>classpath:messages/*</value>
            </list>
        </property> 
        <property name="cacheSeconds" value="1"/>
    </bean>
    <bean id="messageSource" parent="fwk.messageSource"/>

    <!-- Job Launcher -->
	<bean id="batch.jobLauncher" class="org.springframework.batch.core.launch.support.SimpleJobLauncher" p:jobRepository-ref="batch.jobRepository" />

    <!-- Transaction Configuration For the JobRepository -->
	<aop:config>
		<aop:advisor pointcut="execution(* org.springframework.batch.core..*Repository+.*(..))" advice-ref="batch.txAdvice" />
	</aop:config>

	<tx:advice id="batch.txAdvice" transaction-manager="masterTransactionManager">
		<tx:attributes>
			<tx:method name="create*" propagation="REQUIRES_NEW" isolation="READ_COMMITTED" />
			<tx:method name="*" />
		</tx:attributes>
	</tx:advice>
    
    <!-- Job Repository -->
	<bean id="batch.jobRepository" class="org.springframework.batch.core.repository.support.JobRepositoryFactoryBean"
		p:databaseType="${batch.environment}" p:dataSource-ref="masterDataSource"/>
    
    <!-- Simple Job Template -->
	<bean id="batch.simpleJob" class="es.capgemini.devon.batch.StoppableSimpleJob" abstract="true">
		<property name="jobRepository" ref="batch.jobRepository" />
		<property name="restartable" value="true" />
	</bean>

    <!-- Tasklet Step Template -->
	<bean id="batch.taskletStep" class="es.capgemini.devon.batch.StoppableTaskletStep" abstract="true">
		<property name="jobRepository" ref="batch.jobRepository" />
		<property name="allowStartIfComplete" value="true" />
	</bean>

    <!-- Simple Step Template -->
	<bean id="batch.simpleStep" class="org.springframework.batch.core.step.item.SimpleStepFactoryBean" abstract="true">
		<property name="transactionManager" ref="masterTransactionManager" />
		<property name="jobRepository" ref="batch.jobRepository" />
		<property name="startLimit" value="100" />
		<property name="commitInterval" value="1" />
	</bean>
	
    <!-- Skip Limit Step Template -->
	<bean id="batch.skipLimitStep" class="org.springframework.batch.core.step.item.SkipLimitStepFactoryBean" 
          parent="batch.simpleStep" abstract="true" p:skipLimit="0" />
    
    <!--Custom Editors -->
	<bean id="batch.customEditorConfigurer" class="org.springframework.beans.factory.config.CustomEditorConfigurer">
		<property name="customEditors">
			<map>
				<entry key="int[]">
					<bean class="org.springframework.batch.support.IntArrayPropertyEditor" />
				</entry>
				<entry key="org.springframework.batch.item.file.transform.Range[]">
					<bean class="org.springframework.batch.item.file.transform.RangeArrayPropertyEditor" />
				</entry>
				<entry key="java.util.Date">
					<bean class="org.springframework.beans.propertyeditors.CustomDateEditor">
						<constructor-arg>
							<bean class="java.text.SimpleDateFormat">
								<constructor-arg value="yyyyMMdd" />
							</bean>
						</constructor-arg>
						<constructor-arg value="false" />
					</bean>
				</entry>
			</map>
		</property>
	</bean>

    <!-- ReQueue events -->
    <bean id="reQueue" class="es.capgemini.devon.events.defered.ReQueueEventCronTriggerBean">
        <property name="cronExpression" value="${batch.reQueue.cronExpression}"/>
    </bean>

    <!-- Canal de errores Batch por validacion -->
    <si:channel id="errorChannelBatch"/>
    <bean id="eventBatchUtil" class="es.capgemini.devon.batch.tasks.utils.EventBatchUtil" autowire="default"></bean>
    
    <!-- Tareas genÃ©ricas -->    
    <import resource="classpath:ac-devon-batch-tasks.xml"/>
    
</beans>
