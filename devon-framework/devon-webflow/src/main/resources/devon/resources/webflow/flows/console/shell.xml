<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">
    
    <input name="s" type="java.lang.String" />
    <view-state id="shell" view="${view}" >
    	<on-entry>
    		<set name="flowScope.view" value="'fwkConsole/fwkShell'" />		
    	</on-entry>
    	
    	<on-render>
    		<set name="flowScope.view" value="'fwkConsole/fwkShellJSON'" />		
    		<evaluate expression="shellPlugin.eval(s)" result="flashScope.result" />
    		<evaluate expression="s" result="flashScope.script" />
    	</on-render>
    	
    </view-state>
        
</flow>
