<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>es.pfsgroup</groupId>
		<artifactId>recovery-parent-pom</artifactId>
		<version>0.0.27</version>
	</parent>

	<properties>
		<version>4.3.2</version>
		<sufijo>-SNAPSHOT</sufijo>
		<project.build.sourceEncoding>ISO-8859-1</project.build.sourceEncoding>
	</properties>
  
  <groupId>pfs</groupId>
  <artifactId>recovery-procedimientos</artifactId>
  <version>${version}${sufijo}</version>
  <packaging>pom</packaging>
  <name>recovery-procedimientos</name>
  <url>http://maven.apache.org</url>

	<build>
		<resources>
			<resource>
				<directory>src\web</directory>
			</resource>
			<resource>
				<directory>src\main\resources</directory>
			</resource>
			<resource>
				<directory>src//web</directory>
			</resource>
			<resource>
				<directory>src//main//resources</directory>
			</resource>
		</resources>
		<plugins>
			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>1.6</source>
					<target>1.6</target>
					<encoding>ISO-8859-1</encoding>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-eclipse-plugin</artifactId>
				<configuration>
					<downloadSources>true</downloadSources>
					<downloadJavadocs>true</downloadJavadocs>
				</configuration>
			</plugin>
	     <plugin>
               <groupId>org.apache.maven.plugins</groupId>
               <artifactId>maven-pmd-plugin</artifactId>
               <version>2.7.1</version>
               <configuration>
               	<sourceEncoding>ISO-8859-1</sourceEncoding>  
         			<minimumTokens>20</minimumTokens>  
           		<targetJdk>1.6</targetJdk>
           		<rulesets>  
		            <!--  Estas reglas estÃ¡n dentro del JAR del PMD -->  
		            <ruleset>/rulesets/basic.xml</ruleset>  
		            <ruleset>/rulesets/braces.xml</ruleset>  
		            <ruleset>/rulesets/clone.xml</ruleset>  
		            <ruleset>/rulesets/design.xml</ruleset>  
		            <ruleset>/rulesets/unusedcode.xml</ruleset>  
		            <ruleset>/rulesets/coupling.xml</ruleset>  
		            <ruleset>/rulesets/javabeans.xml</ruleset>
		            <ruleset>/rulesets/j2ee.xml</ruleset>
		            <ruleset>/rulesets/junit.xml</ruleset>    
		            <ruleset>/rulesets/logging-java.xml</ruleset>  
		            <ruleset>/rulesets/imports.xml</ruleset>
		            <ruleset>/rulesets/naming.xml</ruleset>    
		            <ruleset>/rulesets/controversial.xml</ruleset>  
		            <ruleset>/rulesets/migrating.xml</ruleset>  
		            <ruleset>/rulesets/strings.xml</ruleset>  
		            <ruleset>/rulesets/optimizations.xml</ruleset>  
		       </rulesets>     
               </configuration>
           </plugin>
            <plugin>
               <groupId>org.codehaus.mojo</groupId>
               <artifactId>cobertura-maven-plugin</artifactId>
               <version>2.5.1</version>
               <configuration>
                   <formats>
                       <format>xml</format>
                   </formats>
               </configuration>                
           </plugin>
           <plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-javadoc-plugin</artifactId>
				<configuration>
					<encoding>ISO-8859-1</encoding>
				</configuration>
			</plugin>
		</plugins>
	</build>
	
	
  <modules>
    <module>recovery-procedimientos-plugin</module>
    <module>recovery-procedimientos-bpm</module>
  </modules>

</project>
