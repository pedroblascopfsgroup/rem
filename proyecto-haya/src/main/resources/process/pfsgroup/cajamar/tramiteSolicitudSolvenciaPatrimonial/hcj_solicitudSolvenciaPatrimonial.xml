<?xml version="1.0" encoding="UTF-8"?>
<process-definition name="hcj_solicitudSolvenciaPatrimonial" xmlns="urn:jbpm.org:jpdl-3.2">

	<start-state name="Inicio">
		<transition to="HC104_SolicitarSolvenciaPatrimonial" name="avanzaBPM"></transition>
	</start-state>
	
	<state name="HC104_SolicitarSolvenciaPatrimonial">
		<event type="node-enter">
			<action name="miTarea"
				class="org.springmodules.workflow.jbpm31.JbpmHandlerProxy"
				config-type="bean">
				<targetBean>genericEnterActionHandler
				</targetBean>
			</action>
		</event>
		<event type="node-leave">
			<action name="miTarea"
				class="org.springmodules.workflow.jbpm31.JbpmHandlerProxy"
				config-type="bean">
				<targetBean>genericLeaveActionHandler
				</targetBean>
			</action>
		</event>
		<transition to="HC104_SolicitarSolvenciaPatrimonial" name="activarAlerta"></transition>
		<transition to="HC104_RegistrarResultadoSolvencia" name="avanzaBPM"></transition>
		<transition to="Fin" name="Fin"></transition>
	</state>
	
	<state name="HC104_RegistrarResultadoSolvencia">
		<event type="node-enter">
			<action name="miTarea"
				class="org.springmodules.workflow.jbpm31.JbpmHandlerProxy"
				config-type="bean">
				<targetBean>genericEnterActionHandler
				</targetBean>
			</action>
		</event>
		<event type="node-leave">
			<action name="miTarea"
				class="org.springmodules.workflow.jbpm31.JbpmHandlerProxy"
				config-type="bean">
				<targetBean>genericLeaveActionHandler
				</targetBean>
			</action>
		</event>
		<transition to="HC104_RegistrarResultadoSolvencia" name="activarAlerta"></transition>
		<transition to="HC104_RegistrarResultadoSolvenciaDecision" name="avanzaBPM"></transition>
		<transition to="HC104_SolicitarSolvenciaPatrimonial" name="vueltaAtras"></transition>
		<transition to="Fin" name="Fin"></transition>
	</state>

	<decision name="HC104_RegistrarResultadoSolvenciaDecision" expression="#{HC104_RegistrarResultadoSolvenciaDecision}">
		<transition to="HC104_RevisarSolvencia" name="bienesSi"></transition>
		<transition to="HC104_SolicitudSolvenciaPatrimonial" name="bienesNo"></transition>
	</decision>

	<node name="HC104_SolicitudSolvenciaPatrimonial">
		<action name="miTarea" config-type="bean"
			class="org.springmodules.workflow.jbpm31.JbpmHandlerProxy">
			<targetBean>genericUserDecisionActionHandler
			</targetBean>
		</action>
		<transition to="Fin" name="Fin"></transition>
	</node>

	<state name="HC104_RevisarSolvencia">
		<event type="node-enter">
			<action name="miTarea"
				class="org.springmodules.workflow.jbpm31.JbpmHandlerProxy"
				config-type="bean">
				<targetBean>genericEnterActionHandler
				</targetBean>
			</action>
		</event>
		<event type="node-leave">
			<action name="miTarea"
				class="org.springmodules.workflow.jbpm31.JbpmHandlerProxy"
				config-type="bean">
				<targetBean>genericLeaveActionHandler
				</targetBean>
			</action>
		</event>
		<transition to="HC104_RevisarSolvencia" name="activarAlerta"></transition>
		<transition to="HC104_AutorizarPropuesta" name="avanzaBPM"></transition>
		<transition to="Fin" name="Fin"></transition>
		<transition to="HC104_RegistrarResultadoSolvencia" name="vueltaAtras"></transition>
	</state>

	<decision name="HC104_AutorizarPropuestaDecision" expression="#{HC104_AutorizarPropuestaDecision}">
		<transition to="Fin" name="denegado"></transition>
		<transition to="HC104_DecisionGestorContencioso" name="aceptado"></transition>
	</decision>
	
	<state name="HC104_AutorizarPropuesta">
		<event type="node-enter">
			<action name="miTarea"
				class="org.springmodules.workflow.jbpm31.JbpmHandlerProxy"
				config-type="bean">
				<targetBean>genericEnterActionHandler
				</targetBean>
			</action>
		</event>
		<event type="node-leave">
			<action name="miTarea"
				class="org.springmodules.workflow.jbpm31.JbpmHandlerProxy"
				config-type="bean">
				<targetBean>genericLeaveActionHandler
				</targetBean>
			</action>
		</event>
		<transition to="HC104_AutorizarPropuesta" name="activarAlerta"></transition>
		<transition to="HC104_AutorizarPropuestaDecision" name="avanzaBPM"></transition>
		<transition to="Fin" name="Fin"></transition>
	</state>

	<node name="HC104_DecisionGestorContencioso">
		<action name="miTarea" config-type="bean"
			class="org.springmodules.workflow.jbpm31.JbpmHandlerProxy">
			<targetBean>genericUserDecisionActionHandler
			</targetBean>
		</action>
		<transition to="Fin" name="Fin"></transition>
	</node>

	<end-state name="Fin">
		<event type="node-enter">
			<action name="myAction" config-type="bean"
				class="org.springmodules.workflow.jbpm31.JbpmHandlerProxy">
				<targetBean>endProcessActionHandler
				</targetBean>
			</action>
		</event>
	</end-state>
</process-definition>