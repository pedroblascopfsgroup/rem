    <import resource="classpath:ac-rec-batch.xml"/>
    
    <!--
        Acceso a procesos bpm
    -->
    <import resource="classpath:ac-rec-batch-bpm.xml"/>
    
    <import resource="classpath:ac-rec-batch-customer.xml"/>
    

