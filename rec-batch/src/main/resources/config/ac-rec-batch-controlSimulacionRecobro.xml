<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:si="http://www.springframework.org/schema/integration"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd 
                        http://www.springframework.org/schema/integration http://www.springframework.org/schema/integration/spring-integration-1.0.xsd 
                        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-2.5.xsd"
	default-merge="true" default-autowire="byName">

	<!-- Sobreescribimos el batch.simpleJob para heredar de PFSStoppableSimpleJob en lugar de StoppableSimpleJob -->
	<bean id="batch.simpleJob" class="es.capgemini.pfs.batch.PFSStoppableSimpleJob" abstract="true">
		<property name="jobRepository" ref="batch.jobRepository" />
		<property name="restartable" value="true" />
	</bean>

	<!-- Definimos el bean del job de control de la simulación del proceso de Simulación -->
	<bean id="procesoControlSimulacionRecobroHandler"	class="es.capgemini.pfs.batch.recobro.simulacion.jobs.ProcesoControlSimulacionJobLauncher" scope="prototype">
		 <property name="channel" value="procesoControlSimulacionRecobroChannel" /> 
	</bean>
	
	<bean id="procesoControlSimulacionRecobroQueueSubscriptor" parent="batch.QueueSubscriptorByFolderGenerator">
		<property name="channel" value="procesoControlSimulacionRecobroChannel" />
		<property name="beanName" value="procesoControlSimulacionRecobroHandler" />
		<property name="methodName" value="handle" />
	</bean>
	
	<!-- Definimos el bean del job de preparación de la simulación del proceso de Simulación -->
	<bean id="procesoPreparacionSimulacionRecobroHandler"	class="es.capgemini.pfs.batch.recobro.simulacion.jobs.ProcesoPreparacionSimulacionJobLauncher" scope="prototype">
		 <property name="channel" value="procesoPreparacionSimulacionRecobroChannel" /> 
	</bean>
	
	<bean id="procesoPreparacionSimulacionRecobroQueueSubscriptor" parent="batch.QueueSubscriptorByFolderGenerator">
		<property name="channel" value="procesoPreparacionSimulacionRecobroChannel" />
		<property name="beanName" value="procesoPreparacionSimulacionRecobroHandler" />
		<property name="methodName" value="handle" />
	</bean>	

	<!-- Definimos el bean del job de marcado del batch de recobro para la Simulación -->
	<bean id="procesoMarcadoExpedientesRecobroSimulacionHandler"	class="es.capgemini.pfs.batch.recobro.jobs.ProcesoMarcadoExpedientesJobLauncher" scope="prototype">
		 <property name="channel" value="procesoMarcadoExpedientesRecobroSimulacionChannel" /> 
	</bean>
	
	<bean id="procesoMarcadoExpedientesRecobroSimulacionQueueSubscriptor" parent="batch.QueueSubscriptorByFolderGenerator">
		<property name="channel" value="procesoMarcadoExpedientesRecobroSimulacionChannel" />
		<property name="beanName" value="procesoMarcadoExpedientesRecobroSimulacionHandler" />
		<property name="methodName" value="handle" />
	</bean>
	
	<!-- Definimos el bean del job de limpieza del batch de recobro para la Simulación -->
	<bean id="procesoLimpiezaExpedientesRecobroSimulacionHandler"	class="es.capgemini.pfs.batch.recobro.jobs.ProcesoLimpiezaExpedientesJobLauncher" scope="prototype">
		 <property name="channel" value="procesoLimpiezaExpedientesRecobroSimulacionChannel" /> 
	</bean>
	
	<bean id="procesoLimpiezaExpedientesRecobroSimulacionQueueSubscriptor" parent="batch.QueueSubscriptorByFolderGenerator">
		<property name="channel" value="procesoLimpiezaExpedientesRecobroSimulacionChannel" />
		<property name="beanName" value="procesoLimpiezaExpedientesRecobroSimulacionHandler" />
		<property name="methodName" value="handle" />
	</bean>
	
	<!-- Definimos el bean del job de revisión de expedientes activos del batch de recobro para la Simulación -->
	<bean id="procesoRevisionExpedientesActivosRecobroSimulacionHandler"	class="es.capgemini.pfs.batch.recobro.jobs.ProcesoRevisionExpedientesActivosJobLauncher" scope="prototype">
		 <property name="channel" value="procesoRevisionExpedientesActivosRecobroSimulacionChannel" /> 
	</bean>
	
	<bean id="procesoRevisionExpedientesActivosRecobroSimulacionQueueSubscriptor" parent="batch.QueueSubscriptorByFolderGenerator">
		<property name="channel" value="procesoRevisionExpedientesActivosRecobroSimulacionChannel" />
		<property name="beanName" value="procesoRevisionExpedientesActivosRecobroSimulacionHandler" />
		<property name="methodName" value="handle" />
	</bean>
	
	<!-- Definimos el bean del job de Rearquetipacion de Expedientes del batch de recobro para la Simulación -->
	<bean id="procesoRearquetipacionExpedientesRecobroSimulacionHandler"	class="es.capgemini.pfs.batch.recobro.jobs.ProcesoRearquetipacionExpedientesJobLauncher" scope="prototype">
		 <property name="channel" value="procesoRearquetipacionExpedientesRecobroSimulacionChannel" /> 
	</bean>
	
	<bean id="procesoRearquetipacionExpedientesRecobroSimulacionQueueSubscriptor" parent="batch.QueueSubscriptorByFolderGenerator">
		<property name="channel" value="procesoRearquetipacionExpedientesRecobroSimulacionChannel" />
		<property name="beanName" value="procesoRearquetipacionExpedientesRecobroSimulacionHandler" />
		<property name="methodName" value="handle" />
	</bean>

	<!-- Definimos el bean del job de Arquetipado del batch de recobro para la Simulación -->
	<bean id="procesoArquetipadoRecobroSimulacionHandler"	class="es.capgemini.pfs.batch.recobro.simulacion.jobs.ProcesoArquetipadoSimulacionJobLauncher" scope="prototype">
		 <property name="channel" value="procesoArquetipadoRecobroSimulacionChannel" /> 
	</bean>
	
	<bean id="procesoArquetipadoRecobroSimulacionQueueSubscriptor" parent="batch.QueueSubscriptorByFolderGenerator">
		<property name="channel" value="procesoArquetipadoRecobroSimulacionChannel" />
		<property name="beanName" value="procesoArquetipadoRecobroSimulacionHandler" />
		<property name="methodName" value="handle" />
	</bean>

	<!-- Definimos el bean del job de Generación de Expedientes del batch de recobro para la Simulación -->
	<bean id="procesoGeneracionExpedientesRecobroSimulacionHandler"	class="es.capgemini.pfs.batch.recobro.jobs.ProcesoGeneracionExpedientesJobLauncher" scope="prototype">
		 <property name="channel" value="procesoGeneracionExpedientesRecobroSimulacionChannel" /> 
	</bean>
	
	<bean id="procesoGeneracionExpedientesRecobroSimulacionQueueSubscriptor" parent="batch.QueueSubscriptorByFolderGenerator">
		<property name="channel" value="procesoGeneracionExpedientesRecobroSimulacionChannel" />
		<property name="beanName" value="procesoGeneracionExpedientesRecobroSimulacionHandler" />
		<property name="methodName" value="handle" />
	</bean>

	<!-- Definimos el bean del job de Reparto de Expedientes del batch de recobro para la Simulación -->
	<bean id="procesoRepartoRecobroSimulacionHandler"	class="es.capgemini.pfs.batch.recobro.jobs.ProcesoRepartoJobLauncher" scope="prototype">
		 <property name="channel" value="procesoRepartoRecobroSimulacionChannel" /> 
	</bean>
	
	<bean id="procesoRepartoRecobroSimulacionQueueSubscriptor" parent="batch.QueueSubscriptorByFolderGenerator">
		<property name="channel" value="procesoRepartoRecobroSimulacionChannel" />
		<property name="beanName" value="procesoRepartoRecobroSimulacionHandler" />
		<property name="methodName" value="handle" />
	</bean>
	
	<!-- Definimos el bean del job de Generacion Y Persistencia del Informe de la simulación del proceso de Simulación -->
	<bean id="procesoGeneracionPersistenciaInformeSimulacionRecobroHandler"	class="es.capgemini.pfs.batch.recobro.simulacion.jobs.ProcesoGeneracionYPersistenciaInformeSimulacionJobLauncher" scope="prototype">
		 <property name="channel" value="procesoGeneracionYPersistenciaInformeSimulacionRecobroChannel" /> 
	</bean>
	
	<bean id="procesoGeneracionYPersistenciaInformeSimulacionRecobroQueueSubscriptor" parent="batch.QueueSubscriptorByFolderGenerator">
		<property name="channel" value="procesoGeneracionYPersistenciaInformeSimulacionRecobroChannel" />
		<property name="beanName" value="procesoGeneracionPersistenciaInformeSimulacionRecobroHandler" />
		<property name="methodName" value="handle" />
	</bean>	
	
	<bean id="securityDefaultUserId" class="java.lang.Long">
	      <constructor-arg value="1" />
	</bean>
  
</beans>