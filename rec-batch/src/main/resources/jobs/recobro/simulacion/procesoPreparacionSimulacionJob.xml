<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:p="http://www.springframework.org/schema/p"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd"
  default-autowire="byName" default-merge="true">
  
  <bean id="procesoPreparacionSimulacionRecobroJob" parent="batch.simpleJob" scope="prototype">
    <!-- 
    <property name="transactional" value="true"/>
    <property name="transactionManager" ref="entityTransactionManager"/>
     -->  
    <property name="steps">
      <list>
		<bean parent="batch.taskletStep" scope="prototype">
			<property name="tasklet">
				<bean parent="batch.task.MultipleSqlScript" p:dataSource-ref="entityDataSource">
					<property name="scripts">
						<!-- Lista de scripts SQL ha ejecutar -->
						<list>
							<map>
								<entry key="sql"><bean parent="sql" p:key="recobro.control.proceso.simulacion" /></entry>
								<entry key="message" value="recobro.control.proceso.simulacion" />
								<entry key="severidad" value="error"/>
							</map>	
							<!-- VOLVEMOS A GENERAR LA VISTA DE BATCH_DATOS_EXP -->
							<map>
								<entry key="sql"><bean parent="sql" p:key="recobro.simulacion.borrado.batch_datos_exp" /></entry>
								<entry key="message" value="recobro.simulacion.borrado.batch_datos_exp" />
								<entry key="severidad" value="error"/>
							</map>							
							<map>
								<entry key="sql"><bean parent="sql" p:key="recobro.simulacion.creacion.batch_datos_exp" /></entry>
								<entry key="message" value="recobro.simulacion.creacion.batch_datos_exp" />
								<entry key="severidad" value="error"/>
							</map>
							<!-- BORRAMOS Y VOLVEMOS A GENERAR LA VISTA DE BATCH_DATOS_CNT_EXP -->	
							<map>
								<entry key="sql"><bean parent="sql" p:key="recobro.simulacion.borrado.batch_datos_cnt_exp" /></entry>
								<entry key="message" value="recobro.simulacion.borrado.batch_datos_cnt_exp" />
								<entry key="severidad" value="error"/>
							</map>							
							<map>
								<entry key="sql"><bean parent="sql" p:key="recobro.simulacion.creacion.batch_datos_cnt_exp" /></entry>
								<entry key="message" value="recobro.simulacion.creacion.batch_datos_cnt_exp" />
								<entry key="severidad" value="error"/>
							</map>							
							<!-- BORRAMOS Y VOLVEMOS A GENERAR LA VISTA DE BATCH_DATOS_PER_EXP -->
							<map>
								<entry key="sql"><bean parent="sql" p:key="recobro.simulacion.borrado.batch_datos_per_exp" /></entry>
								<entry key="message" value="recobro.simulacion.borrado.batch_datos_per_exp" />
								<entry key="severidad" value="error"/>
							</map>							
							<map>
								<entry key="sql"><bean parent="sql" p:key="recobro.simulacion.creacion.batch_datos_per_exp" /></entry>
								<entry key="message" value="recobro.simulacion.creacion.batch_datos_per_exp" />
								<entry key="severidad" value="error"/>
							</map>								
							<!-- BORRAMOS Y VOLVEMOS A GENERAR LA VISTA DE BATCH_DATOS_EXP_MANUAL -->
							<map>
								<entry key="sql"><bean parent="sql" p:key="recobro.simulacion.borrado.batch_datos_exp_manual" /></entry>
								<entry key="message" value="recobro.simulacion.borrado.batch_datos_exp_manual" />
								<entry key="severidad" value="error"/>
							</map>							
							<map>
								<entry key="sql"><bean parent="sql" p:key="recobro.simulacion.creacion.batch_datos_exp_manual" /></entry>
								<entry key="message" value="recobro.simulacion.creacion.batch_datos_exp_manual" />
								<entry key="severidad" value="error"/>
							</map>	
							<!-- GENERAMOS LOS INDICES PARA ESTAS VISTAS -->
							<map>
								<entry key="sql"><bean parent="sql" p:key="recobro.simulacion.creacion.indices.vistas" /></entry>
								<entry key="message" value="recobro.simulacion.creacion.indices.vistas" />
								<entry key="severidad" value="error"/>
							</map>								
							<!-- VOLVEMOS A GENERAR LA VISTA DE BATCH_RCF_ENTRADA -->
							<map>
								<entry key="sql"><bean parent="sql" p:key="recobro.simulacion.borrado.batch_rcf_entrada" /></entry>
								<entry key="message" value="recobro.simulacion.borrado.batch_rcf_entrada" />
								<entry key="severidad" value="error"/>
							</map>							
							<map>
								<entry key="sql"><bean parent="sql" p:key="recobro.simulacion.creacion.batch_rcf_entrada" /></entry>
								<entry key="message" value="recobro.simulacion.creacion.batch_rcf_entrada" />
								<entry key="severidad" value="error"/>
							</map>
 						</list>
					</property>
				</bean>
			</property>
		</bean>
      </list>
    </property>
  </bean>
</beans>
	