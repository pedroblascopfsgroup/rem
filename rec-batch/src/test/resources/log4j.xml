    <!-- DEVON -->
    <logger name="es.capgemini" additivity="false">
        <level value="debug"/> 
        <appender-ref ref="console" />
        <appender-ref ref="email" />
    </logger>
    <logger name="es.capgemini.devon.events.EventManager" additivity="false">
        <level value="debug"/> 
        <appender-ref ref="console" />
        <appender-ref ref="email" />
    </logger>
    
     <!-- PFS -->
    <logger name="es.capgemini.pfs" additivity="false">
