<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context" 
    xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
                http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-2.5.xsd"
    default-merge="true"
    default-autowire="byName">
       
    <import resource="classpath:testScanComponents.xml" />

    <!-- Add jbpm Mappings to "masterSessionFactory" -->
    <alias name="jbpm.mappings" alias="master.additionalMappings"/> 
    
    <!-- Add the bpm configuration -->
    <bean id="jbpmConfiguration" parent="bpm.configuration">
        <property name="sessionFactory" ref="masterSessionFactory" />
        <property name="processDefinitions">
            <list>
                <bean parent="bpm.processFactory" p:definitionLocation="process/itinerario/Itinerario.xml" p:version="-1"/>
            </list>
        </property>
    </bean>
    
    <bean id="jbpmTemplate" class="org.springmodules.workflow.jbpm31.JbpmTemplate">
        <constructor-arg index="0" ref="jbpmConfiguration"/>
    </bean>


</beans>