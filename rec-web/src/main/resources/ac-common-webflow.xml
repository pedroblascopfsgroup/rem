	<!-- ViewResolver para el formato MS Word (.doc) -->
    <beans:bean id="reportDOCViewResolver" class="org.springframework.web.servlet.view.InternalResourceViewResolver">
        <beans:property name="viewNames" value="reportDOC*"/>
        <beans:property name="viewClass" value="es.capgemini.pfs.view.ReportDOCView"/>
        <beans:property name="prefix" value="/reports/" />
        <beans:property name="suffix" value=".rptdesign" />
        <beans:property name="order" value="30"/> 
    </beans:bean>

	<!-- ViewResolver para el PDF/XLS din치mico de simulaci칩n de Scoring & Alertas -->
