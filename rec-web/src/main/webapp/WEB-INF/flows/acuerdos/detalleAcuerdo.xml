<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">
	
	<input name="id" type="java.lang.Long" required="false"/>
	<input name="idAsunto" type="java.lang.Long" />
	<!-- renderiza el formulario -->
    <end-state id="getAcuerdo" view="acuerdos/detalleAcuerdos" >
	    <on-entry>
	    	<evaluate expression="executor.execute('acuerdoManager.getActuacionesAExplorarAcuerdo',id)" result="flowScope.actuacionesAExplorar" />
	    	<evaluate expression="executor.execute('acuerdoManager.getAcuerdoById',id)" result="flowScope.acuerdo" />
	    	<evaluate expression="executor.execute('acuerdoManager.puedeEditar',id)" result="flowScope.puedeEditar" />
	    	<evaluate expression="executor.execute('asuntosManager.esGestor',idAsunto)" result="flowScope.esGestor"/>
	    </on-entry>
    </end-state> 

</flow>
