<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">

	<input name="idPersona" type="java.lang.Long"/>
	<input name="isGestor" type="java.lang.Boolean"/>
	<input name="isSupervisor" type="java.lang.Boolean"/>
	<input name="proponer" type="java.lang.Boolean"/>
	<input name="idArquetipo" type="java.lang.Long"/>

    <action-state id="crearExpedienteManual">
			<evaluate expression="executor.execute('personaManager.obtenerIdExpedientePropuestoPersona', idPersona)" result="flowScope.idExpediente"/>
			<transition to="newOrEdit" />
	</action-state>

	<decision-state id="newOrEdit">
		<if test="idExpediente!=null" then="buscar" else="formulario"/>
	</decision-state>
	
	
	<action-state id="buscar">
			<evaluate expression="executor.execute('expedienteManager.getPropuestaExpedienteManual', idExpediente)" result="flowScope.propuesta"/>
			<transition to="formulario" />
	</action-state>

    <view-state id="formulario" view="${view}" >
    	<on-entry>
    		<evaluate expression="executor.execute('personaManager.get', idPersona)" result="flowScope.persona"/>
            <evaluate expression="executor.execute('personaManager.obtenerNumContratosGeneracionExpManual', idPersona)" result="flowScope.nContratos"/>
    		<set name="flowScope.idPersona" value="idPersona" />
    		<set name="flowScope.idArquetipo" value="idArquetipo" />
			<set name="flowScope.view" value="'expedientes/creacionManualExpediente'" />
    	</on-entry>
    	<on-render>
			<set name="flowScope.view" value="'default'"/>
		</on-render>
		<transition on="update" to="update"/>
		<transition on="cancel" to="close" bind="false"/>
    </view-state> 	
    
    <action-state id="update">
		<transition to="close" />
	</action-state>

	<end-state id="close" view="default" />
        
</flow>