<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">

	<var name="parametrizacion" class="es.capgemini.pfs.parametrizacion.model.Parametrizacion" />
	<var name="dto" class="es.capgemini.pfs.parametrizacion.dto.DtoParametrizacion" />

	<action-state id="buscar">
		<evaluate expression="executor.execute('parametrizacionManager.buscarParametroPorNombre', 'scoring.rangoIntervalo')" result="flowScope.parametrizacion" />
		<transition to="formulario" />
	</action-state>

    <view-state id="formulario" view="${view}" model="dto">
    	<binder>
    		<binding property="parametrizacion.valor" />
    	</binder>
    	<on-entry>
    		<set name="dto.parametrizacion" value="parametrizacion" />
    		<set name="flowScope.view" value="'metricas/editNumIntervalos'" />
    	</on-entry>

		<transition on="update" to="update" />
		<transition on="cancel" to="close" bind="false" />
    </view-state>

    <action-state id="update">
    	<evaluate expression="executor.execute('parametrizacionManager.update', dto)" />
		<transition to="close" />
	</action-state>

	<end-state id="close" view="default" />

</flow>
