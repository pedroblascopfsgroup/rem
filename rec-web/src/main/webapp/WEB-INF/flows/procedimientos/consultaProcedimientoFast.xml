<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">
    
	<input name="id" type="java.lang.Long"/>
	<input name="nombreTab" type="java.lang.String"/>
  	<input name="tarea" type="java.lang.Long"/>
	<input name="fechaVenc" type="java.lang.String"/>
	
	
	<action-state id="tienePluginProcurador">
		<evaluate expression="executor.execute('plugin.mejoras.web.procuradores.pluginProcuradoresIsInstall')" result="flowScope.tieneProcurador" />
		<transition to="decisionTieneProcurador"/>
	</action-state>
	
	<decision-state id="decisionTieneProcurador">
		<if test="tieneProcurador" then="moduloProcurador" else="consultaProcedimiento"/>
	</decision-state>
	
	<action-state id="moduloProcurador">
	    <evaluate expression="executor.execute('plugin.procuradores.procurador.getProcuradorReal',id)" result="flowScope.procuradorReal" />
		<transition to="moduloProcuradorDes"/>
	</action-state>
	
	<action-state id="moduloProcuradorDes">
		<evaluate expression="executor.execute('es.pfsgroup.plugin.recovery.procuradores.configuracion.api.activoDespachoIntegral')" result="flowScope.activoDespachoIntegral" />
		<transition to="moduloProcuradorHistResoluciones"/>
	</action-state>
	
	<action-state id="moduloProcuradorHistResoluciones">
	    <evaluate expression="executor.execute('es.pfsgroup.plugin.recovery.procuradores.procesado.api.hayDespachoIntegral',id)" result="flowScope.hayDespachoIntegral" />
		<transition to="consultaProcedimiento"/>
	</action-state>
	
	<!-- renderiza el formulario -->
    <end-state id="consultaProcedimiento" view="entidad/procedimiento/procedimientoJSON" >
	    <on-entry>
<!-- 	    	<evaluate expression="fechaVenc" result="flowScope.fechaVenc" /> -->
<!-- 	    	<evaluate expression="tarea" result="flowScope.tarea" /> -->
	    	<evaluate expression="executor.execute('core.procedimiento.getContratoPrincipal',id)" result="flowScope.contratoPrincipal" />
			<evaluate expression="executor.execute('procedimientoManager.getProcedimiento',id)" result="flowScope.procedimiento" />
	    	<evaluate expression="executor.execute('procedimientoManager.esGestor',id)" result="flowScope.esGestor" />
    	    <evaluate expression="executor.execute('asuntosManager.esGestorDecision',id)" result="flowScope.esGestorDecision" />		    	
	    	<evaluate expression="executor.execute('procedimientoManager.esSupervisor',id)" result="flowScope.esSupervisor" />
            <evaluate expression="executor.execute('procedimientoManager.buscarTareaPendiente',id)" result="flowScope.tareaPendiente" />
            <evaluate expression="executor.execute('plugin.mejoras.acuerdoProcedimientoManager.verTabRecursos',id)" result="flowScope.verTabRecursos" />
            <evaluate expression="executor.execute('plugin.mejoras.acuerdoProcedimientoManager.verTabInfRequerida',id)" result="flowScope.verTabInfRequerida" />
            <evaluate expression="executor.execute('plugin.mejoras.acuerdoProcedimientoManager.codigoTipoActuacion',id)" result="flowScope.codigoTipoActuacion" />
	    	<evaluate expression="executor.execute('recursoManager.puedeCrearRecurso',id)" result="flowScope.puedeCrearRecurso" />
	    	<evaluate expression="executor.execute('consultaProcedimientoManager.getTabs',id)" result="flowScope.tabsProcedimiento" />
			<evaluate expression="executor.execute('plugin.mejoras.procedimientoManager.procedimientoParalizado',id)" result="flowScope.paralizado" />
			<evaluate expression="executor.execute('plugin.precontencioso.getPrecontenciosoPorProcedimientoId',id)" result="flowScope.precontencioso" />		
			<evaluate expression="executor.execute('plugin.precontencioso.getVisibilidadBotonesPrecontencioso','botonesDocumentos',true)" result="flowScope.botonesVisiblesDocPco" />
			<evaluate expression="executor.execute('plugin.precontencioso.getVisibilidadBotonesPrecontencioso','botonesDocumentos',false)" result="flowScope.botonesInvisiblesDocPco" />
			<evaluate expression="executor.execute('plugin.precontencioso.getVisibilidadBotonesPrecontencioso','botonesLiquidaciones',true)" result="flowScope.botonesVisiblesLiqPco" />
			<evaluate expression="executor.execute('plugin.precontencioso.getVisibilidadBotonesPrecontencioso','botonesLiquidaciones',false)" result="flowScope.botonesInvisiblesLiqPco" />
			<evaluate expression="executor.execute('plugin.precontencioso.getVisibilidadBotonesPrecontencioso','botonesBurofaxes',true)" result="flowScope.botonesVisiblesBurPco" />
			<evaluate expression="executor.execute('plugin.precontencioso.getVisibilidadBotonesPrecontencioso','botonesBurofaxes',false)" result="flowScope.botonesInvisiblesBurPco" />
			
	    </on-entry>
    </end-state>     
</flow>
