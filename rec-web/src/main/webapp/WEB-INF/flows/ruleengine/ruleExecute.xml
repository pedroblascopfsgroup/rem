<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">

    <!--  
    <var name="dto" class="es.capgemini.pfs.ruleengine.state.imp.DefaultEndState"/> 
    -->
	<input name="ruleDefinition" type="java.lang.String" />    
	<end-state id="ruleExec" view="ruleengine/ruleExecuteJSON">
		<on-entry>
			<!-- necesito una instancia de DDEstadoItinerario para acceder a las constantes -->
	    	<!-- 
	    	 <evaluate expression="binder.bindAndValidate(flowRequestContext, dto)" />
	    	 -->
			<evaluate expression="executor.execute('arquetiposRuleExecutor.checkRule',ruleDefinition)" result="flowScope.r" />
		</on-entry>
	</end-state>
    
</flow>