<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<properties>
		<devon.version>1.1.0</devon.version>
		<version>1.0.0-SNAPSHOT</version>
	</properties>
	
	<modelVersion>4.0.0</modelVersion>
	<groupId>es.pfsgroup.plugin</groupId>
	<artifactId>recovery-bi-plugin</artifactId>
	<version>${version}</version>

	<distributionManagement>
		<repository>
			<id>pfsrepo</id>
			<url>scp://interecovery.pfsgroup.es/shared/maven</url>
		</repository>
	</distributionManagement>

	<repositories>
		<repository>
			<id>pfsrepo</id>
			<url>http://interecovery.pfsgroup.es:8086</url>
		</repository>
	</repositories>

	<build>
		<resources>
			<resource>
				<directory>src/web</directory>
                                <excludes>
                                        <exclude>js/plugin/bi/biconnection-clear.js</exclude>
                                </excludes>
			</resource>
			<resource>
				<directory>src/main/resources</directory>
			</resource>
		</resources>
		<plugins>
			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>1.6</source>
					<target>1.6</target>
					<encoding>UTF-8</encoding>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-eclipse-plugin</artifactId>
				<configuration>
					<downloadSources>true</downloadSources>
					<downloadJavadocs>true</downloadJavadocs>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>
