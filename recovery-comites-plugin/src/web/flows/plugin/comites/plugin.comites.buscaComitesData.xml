<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">

    <var name="dtoBusquedaComite" class="es.pfsgroup.plugin.recovery.comites.comite.dto.CMTDtoBusquedaComite"/>

    
    <!--a partir de este momento sÃ³lo enviamos ajax -->
    <end-state id="listado" view="plugin/comites/listadoComitesJSON" >
    	<secured attributes="ROLE_CONFCOMITE" match="any" />
		<on-entry>
			<evaluate expression="binder.bindAndValidate(flowRequestContext,dtoBusquedaComite)" />
			<evaluate expression="executor.execute('plugin.comites.comite.buscaComites',dtoBusquedaComite)" result="flowScope.comites"/>
		</on-entry>
	</end-state>
	
    
</flow>
