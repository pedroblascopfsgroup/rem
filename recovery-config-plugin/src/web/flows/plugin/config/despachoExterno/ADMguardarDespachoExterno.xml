<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">

	<var name="dto"
		class="es.pfsgroup.plugin.recovery.config.despachoExterno.dto.ADMDtoDespachoExterno" />

	<end-state id="guardar" view="plugin/config/despachoExterno/despachoJSON">
		<secured attributes="ROLE_ADMIN" match="any" />
		<on-entry>
			<evaluate expression="binder.bindAndValidate(flowRequestContext,dto)" />
			<evaluate
				expression="executor.execute('ADMDespachoExternoManager.guardaDespachoExterno',dto)"
				result="flowScope.despacho" />
			<evaluate
				expression="executor.execute('ADMDespachoExternoManager.guardarExtrasDespacho',dto,despacho.id)"
				result="flowScope.despachoExtras" />
		</on-entry>
	</end-state>
</flow>