<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">

    <!--<var name="dto" class="es.capgemini.pfs.cliente.dto.DtoBuscarClientes"/> -->
	<var name="dto" class="es.pfsgroup.plugin.recovery.config.perfiles.dto.ADMDtoPerfil"/>
    
    <!--a partir de este momento sÃ³lo enviamos ajax -->
    <end-state id="listado" view="plugin/config/perfiles/perfilJSON" >
    	<secured attributes="ROLE_ADMIN" match="any" />
		<on-entry>
			<evaluate expression="binder.bindAndValidate(flowRequestContext,dto)" />
			<evaluate expression="executor.execute('ADMPerfilManager.guardaPerfil',dto)" result="flowScope.perfil"/>
		</on-entry>
	</end-state>
	
    
</flow>