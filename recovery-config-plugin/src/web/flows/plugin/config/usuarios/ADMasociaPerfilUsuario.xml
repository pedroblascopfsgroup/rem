<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">

	<input name="id" type="java.lang.Long"/>
	
	<end-state id="listado" view="plugin/config/usuarios/asociaPerfilUsuario">
		<secured attributes="ROLE_ADMIN" match="any" />
		<on-entry>
			<evaluate expression="executor.execute('ADMUsuarioManager.getUsuario',id)" result="flowScope.usuario"/>
			<evaluate expression="executor.execute('plugin.config.zona.buscaZonas')" result="flowScope.zonas" /> 
			<evaluate expression="executor.execute('zonaManager.getNiveles')" result="flowScope.niveles" />
			<evaluate expression="executor.execute('ADMPerfilManager.buscaPerfiles')" result="flowScope.perfiles"/>
		</on-entry>
	</end-state>
</flow>