<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">

	
	<var name="dtoGuardarGrupoUsuario" class="es.pfsgroup.plugin.recovery.config.usuarios.dto.ADMDiccionarioGrupoUsuario" />
	
    
    <!--a partir de este momento sÃ³lo enviamos ajax -->
    <end-state id="listado" view="default" >
    	<secured attributes="ROLE_ADMIN" match="any" />
		<on-entry>
			<evaluate expression="binder.bindAndValidate(flowRequestContext,dtoGuardarGrupoUsuario)" />
			<evaluate expression="executor.execute('ADMUsuarioManager.guardaGrupo',dtoGuardarGrupoUsuario)" result="flowScope.pagina"/>
			
		</on-entry>
	</end-state>
	
</flow>