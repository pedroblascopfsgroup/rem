<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">

	
	<var name="dtoUsuario" class="es.pfsgroup.plugin.recovery.config.usuarios.dto.ADMDtoUsuario"/>
	
    
    <!--a partir de este momento sÃ³lo enviamos ajax -->
    <end-state id="listado" view="plugin/config/usuarios/usuarioJSON" >
    	<secured attributes="ROLE_ADMIN" match="any" />
		<on-entry>
			<evaluate expression="binder.bindAndValidate(flowRequestContext,dtoUsuario)" />
			<evaluate expression="executor.execute('ADMUsuarioManager.guardaUsuario',dtoUsuario)" result="flowScope.usuario"/>
		</on-entry>
	</end-state>
	
    
</flow>