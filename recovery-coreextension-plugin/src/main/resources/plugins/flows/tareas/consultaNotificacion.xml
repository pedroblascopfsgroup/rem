<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">

	<var name="dtoTarea" class="es.capgemini.pfs.tareaNotificacion.EXTDtoGenerarTarea" />
	<input name="idEntidad" type="java.lang.Long"/>
	<input name="codigoTipoEntidad" type="java.lang.String"/>
	<input name="descripcion" type="java.lang.String"/>
	<input name="fecha" type="java.lang.String"/>
	<input name="situacion" type="java.lang.String"/> 
	<input name="descripcionTareaAsociada" type="java.lang.String"/>
	<input name="idTareaAsociada" type="java.lang.Long"/>
	<input name="idTarea" type="java.lang.Long"/>
    <input name="tipoTarea" type="java.lang.String"/>
    <input name="readOnly" type="java.lang.Boolean"/>

    <view-state id="formulario" view="plugin/coreextension/tareas/consultaNotificacion">
		<on-entry>
			<evaluate expression="binder.bindAndValidate(flowRequestContext, dtoTarea)" />
			<evaluate expression="executor.execute('EXTtareaNotificacionManager.obtenerComunicacion',dtoTarea)" result="flowScope.valores"/>
		</on-entry>
		<transition on="update" to="update"/>
		<transition on="cancel" to="close" bind="false"/>
    </view-state> 	

    <action-state id="update">
    	<evaluate expression="executor.execute('tareaNotificacionManager.finalizarNotificacion', idTarea)" /> 
		<transition to="close" />
	</action-state>

	<end-state id="close" view="default" />

</flow>
