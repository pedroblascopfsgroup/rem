<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">

    <var name="dto" class="es.pfsgroup.recovery.ext.impl.asunto.dto.EXTDtoBusquedaAsunto" />
	<input name="params" type="java.lang.String"/>
    <end-state id="xls" view="reportXLS/plugin/coreextension/asunto/listaAsuntos">
      <on-entry>
         <evaluate expression="binder.bindAndValidate(flowRequestContext, dto)" />
         <evaluate expression="executor.execute('es.pfsgroup.recovery.ext.api.asunto.findAsuntosPaginatedDinamicoCount', dto,params)" result="flowScope.lista" />
      </on-entry>
    </end-state>

</flow>
