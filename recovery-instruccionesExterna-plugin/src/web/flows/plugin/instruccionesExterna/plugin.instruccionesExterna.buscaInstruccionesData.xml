<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">

    <var name="dtoBusquedaInstrucciones" class="es.pfsgroup.plugin.recovery.instruccionesExterna.instruccionesTareasExterna.dto.INSDtoBusquedaInstrucciones"/>

    
    <!--a partir de este momento sÃ³lo enviamos ajax -->
    <end-state id="listado" view="plugin/instruccionesExterna/listadoInstruccionesExternaJSON" >
    	<secured attributes="ROLE_CONF_INSTRUCC_EXT" match="any" />
		<on-entry>
			<evaluate expression="binder.bindAndValidate(flowRequestContext,dtoBusquedaInstrucciones)" />
			<evaluate expression="executor.execute('plugin.instruccionesExterna.plazoTareaExternaPlaza.buscaInstrucciones',dtoBusquedaInstrucciones)" result="flowScope.instrucciones"/>
		</on-entry>
	</end-state>
	
    
</flow>

