<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">

	<var name="dtoTarea" class="es.capgemini.pfs.prorroga.dto.DtoSolicitarProrroga" />

	<!-- Si isConsulta==true significa que se va a consultar, no editar -->
	<input name="isConsulta" type="java.lang.Boolean" />

	<input name="idEntidadInformacion" type="java.lang.Long"/>
	<input name="idTipoEntidadInformacion" type="java.lang.String"/>
	<input name="descripcionCausa" type="java.lang.String"/>
	<input name="situacion" type="java.lang.String"/>
	<input name="fechaCreacion" type="java.lang.String"/>
	<input name="fechaVencimiento" type="java.lang.String"/>
	<input name="fechaPropuesta" type="java.lang.String"/>
	<input name="destareaOri" type="java.lang.String"/>
	<input name="motivo" type="java.lang.String"/>
	<input name="idTareaOriginal" type="java.lang.Long"/>
	<input name="aceptada" type="java.lang.String"/>	
	<input name="descripcion" type="java.lang.String"/>
	<input name="codigoTipoProrroga" type="java.lang.String"/> 
   
    <view-state id="formulario" view="${view}" model="dtoTarea">
    	<binder>
    		<binding property="descripcion"/>
    		<binding property="idEntidadInformacion"/>
    		<binding property="idTipoEntidadInformacion"/>
    		<binding property="codigoRespuesta"/>
    		<binding property="aceptada"/>
    		<binding property="idTareaOriginal"/>
    		<binding property="descripcionCausa"/>    	    		
		</binder>
    	<on-entry>
    		<set name="idTipoEntidadInformacion" value="idTipoEntidadInformacion" />
    		<set name="idEntidadInformacion" value="idEntidadInformacion" />
    		<set name="situacion" value="situacion" />
    		<set name="fechaCreacion" value="fechaCreacion" />
            <set name="fechaVencimiento" value="fechaVencimiento"/>        
    		<set name="fechaPropuesta" value="fechaPropuesta" />
    		<set name="destareaOri" value="destareaOri" />
    		<set name="motivo" value="motivo" />
    		<set name="descripcion" value="descripcion" />
    		<set name="idTareaOriginal" value="idTareaOriginal" />
    		<set name="flowScope.view" value="'plugin/mejoras/tareas/decisionProrroga'" />
    		<evaluate expression="executor.execute('prorrogaManager.obtenerRespuestas', codigoTipoProrroga)" result="flowScope.respuestas" />
    		<evaluate expression="executor.execute('prorrogaManager.obtenerDecisionProrroga',idTareaOriginal)" result="flowScope.decisionProrroga" />
    	</on-entry>
		
    	<on-render>
			<!-- a partir de la segunda vez, la respuesta ya debe ser json  por tanto
			cambiaremos el nombre de la vista a 'default'--> 
			<set name="flowScope.view" value="'default'"/>
			<!--
			<evaluate expression="executor.execute('tipoBien.getList')" result="flashScope.tiposBien"/>
			-->
		</on-render>
		
		<transition on="update" to="update"/>
		<transition on="cancel" to="close" bind="false"/>
		<transition on="ok" to="close" bind="false"/>
    </view-state> 	
    
    <action-state id="update">
    	<evaluate expression="executor.execute('tareaNotificacionManager.contestarProrroga',dtoTarea)" />
		<!-- <transition on-exception="java.lang.Exception" to="formulario" /> -->
		<transition to="close"></transition>
	</action-state>
	
	<end-state id="close" view="default" />
        
</flow>
