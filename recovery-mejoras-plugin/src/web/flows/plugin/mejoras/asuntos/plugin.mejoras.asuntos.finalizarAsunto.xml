<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">

	<var name="dto" class="es.pfsgroup.plugin.recovery.mejoras.asunto.controller.dto.MEJFinalizarAsuntoDto" />
	<input name="idAsunto" type="java.lang.Long"/>
	<input name="fechaFinalizacion" type="java.util.Date"/>
	<input name="motivoFinalizacion" type="java.lang.String"/>
	<input name="observaciones" type="java.lang.String"/>
	<input name="cumplidoSelect" type="java.lang.String"/>
		
    <view-state id="formulario" view="${view}" model="dto">
    	<binder>
    		<binding property="idAsunto" />
    		<binding property="fechaFinalizacion"/>
    		<binding property="motivoFinalizacion"/>
    		<binding property="observaciones"/>
    		<binding property="cumplidoSelect"/>
		</binder>
    	<on-entry>
    		<set name="idAsunto" value="idAsunto" />

    		<set name="flowScope.view" value="'plugin/mejoras/asuntos/formulario/finalizarAsunto'" />
    	</on-entry>
		
    	<on-render>
    	
			<!-- <evaluate expression="executor.execute('dictionaryManager.getList','DDCausaDecision')" result="flashScope.causaDecision"/> -->
			<evaluate expression="executor.execute('dictionaryManager.getList','DDCausaDecisionFinalizar')" result="flashScope.causaDecisionFinalizar"/>  
			<evaluate expression="executor.execute('dictionaryManager.getList','DDSiNo')" result="flashScope.ddSiNo"/>
			<evaluate expression="executor.execute('AsuntoAcuerdoManager.esAsuntoAcuerdo',idAsunto)" result="flashScope.esAsuntoAcuerdo" />
			<set name="flowScope.view" value="'default'"/>
			
		</on-render>
		
		<transition on="update" to="update"/>
		<transition on="cancel" to="close" bind="false"/>
    </view-state> 	
    
    <action-state id="update">
    	<evaluate expression="executor.execute('plugin.mejoras.finalizarAsunto',dto)" /> 
	    <transition on-exception="java.lang.Exception" to="formulario" /> 
		<transition to="close"></transition>
	</action-state>
	
	<end-state id="close" view="default" />
        
</flow>
