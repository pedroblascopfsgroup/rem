<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">

    <var name="dtoBusquedaPlaza" class="es.pfsgroup.plugin.recovery.plazasJuzgados.juzgado.dto.JUZDtoBusquedaPlaza"/>

    
    <!--a partir de este momento sÃ³lo enviamos ajax -->
    <end-state id="listado" view="plugin/plazasJuzgados/listadoPlazasJuzgadosJSON" >
    	<secured attributes="ROLE_CONFPLAZASYJUZ" match="any" />
		<on-entry>
			<evaluate expression="binder.bindAndValidate(flowRequestContext,dtoBusquedaPlaza)" />
			<evaluate expression="executor.execute('plugin.plazasJuzgados.juzgado.buscaPlazasJuzgados',dtoBusquedaPlaza)" result="flowScope.juzgados"/>
		</on-entry>
	</end-state>
	
    
</flow>

