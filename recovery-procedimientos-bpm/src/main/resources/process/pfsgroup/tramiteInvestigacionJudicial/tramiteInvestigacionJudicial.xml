<?xml version="1.0" encoding="UTF-8"?>

<process-definition xmlns="" name="tramiteInvestigacionJudicial">

	<start-state name="Inicio">
		<transition to="P20_SolicitudInvestigacionJudicial" name="iniciarProceso"></transition>
	</start-state>

   
	<state name="P20_SolicitudInvestigacionJudicial">
		<event type="node-enter">
			<action name="miTarea"
				class="org.springmodules.workflow.jbpm31.JbpmHandlerProxy"
				config-type="bean">
				<targetBean>genericEnterActionHandler
				</targetBean>
			</action>
		</event>
		<event type="node-leave">
			<action name="miTarea"
				class="org.springmodules.workflow.jbpm31.JbpmHandlerProxy"
				config-type="bean">
				<targetBean>genericLeaveActionHandler
				</targetBean>
			</action>
		</event>
		<transition to="P20_SolicitudInvestigacionJudicial" name="activarAlerta"></transition>
		<transition to="P20_RegistrarResultadoInvestigacion" name="avanzaBPM"></transition>
		<transition to="Fin" name="Fin"></transition>
	</state>

	<state name="P20_RegistrarResultadoInvestigacion">
		<event type="node-enter">
			<action name="miTarea"
				class="org.springmodules.workflow.jbpm31.JbpmHandlerProxy"
				config-type="bean">
				<targetBean>genericEnterActionHandler
				</targetBean>
			</action>
		</event>
		<event type="node-leave">
			<action name="miTarea"
				class="org.springmodules.workflow.jbpm31.JbpmHandlerProxy"
				config-type="bean">
				<targetBean>genericLeaveActionHandler
				</targetBean>
			</action>
		</event>
		<transition to="P20_RegistrarResultadoInvestigacion" name="activarAlerta"></transition>	
		<transition to="P20_RegistrarResultadoInvestigacionDecision" name="avanzaBPM"></transition>
		<transition to="Fin" name="Fin"></transition>
		<transition to="P20_SolicitudInvestigacionJudicial" name="vueltaAtras"></transition>
	</state>

	<decision name="P20_RegistrarResultadoInvestigacionDecision" expression="#{P20_RegistrarResultadoInvestigacionDecision}">
		<transition to="Decision" name="NO"></transition>
		<transition to="P20_RevisarInvestigacionYActualizacionDatos" name="SI"></transition>
	</decision>

	<node name="Decision">
		<action name="miTarea" config-type="bean" class="org.springmodules.workflow.jbpm31.JbpmHandlerProxy">
         	<targetBean>genericUserDecisionActionHandler</targetBean>
      	</action>	
		<transition to="Fin" name="Fin"></transition>
	</node>

	<state name="P20_RevisarInvestigacionYActualizacionDatos">
		<event type="node-enter">
			<action name="miTarea"
				class="org.springmodules.workflow.jbpm31.JbpmHandlerProxy"
				config-type="bean">
				<targetBean>genericEnterActionHandler
				</targetBean>
			</action>
		</event>
		<event type="node-leave">
			<action name="miTarea"
				class="org.springmodules.workflow.jbpm31.JbpmHandlerProxy"
				config-type="bean">
				<targetBean>genericLeaveActionHandler
				</targetBean>
			</action>
		</event>
		<transition to="P20_RevisarInvestigacionYActualizacionDatos" name="activarAlerta"></transition>
		<transition to="Decision 2" name="avanzaBPM"></transition>
		<transition to="Fin" name="Fin"></transition>
		<transition to="P20_RegistrarResultadoInvestigacion" name="vueltaAtras"></transition>
	</state>

	<node name="Decision 2">
		<action name="miTarea" config-type="bean" class="org.springmodules.workflow.jbpm31.JbpmHandlerProxy">
         	<targetBean>genericUserDecisionActionHandler</targetBean>
      	</action>	
		<transition to="Fin"></transition>
	</node>


	<end-state name="Fin">
		<event type="node-enter">
			<action name="myAction" config-type="bean"
				class="org.springmodules.workflow.jbpm31.JbpmHandlerProxy">
				<targetBean>endProcessActionHandler</targetBean>
			</action>
		</event>
	</end-state>

</process-definition>