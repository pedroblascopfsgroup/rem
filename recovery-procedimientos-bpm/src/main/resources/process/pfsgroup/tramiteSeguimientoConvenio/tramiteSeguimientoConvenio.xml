<?xml version="1.0" encoding="UTF-8"?>

<process-definition xmlns="urn:jbpm.org:jpdl-3.2" name="tramiteSeguimientoConvenio">

	<start-state name="Inicio">
		<transition to="P64_registrarConvenio"></transition>
	</start-state>


	<state name="P64_registrarConvenio">
		<event type="node-enter">
			<action name="miTarea"
				class="org.springmodules.workflow.jbpm31.JbpmHandlerProxy"
				config-type="bean">
				<targetBean>genericEnterActionHandler
				</targetBean>
			</action>
		</event>
		<event type="node-leave">
			<action name="miTarea"
				class="org.springmodules.workflow.jbpm31.JbpmHandlerProxy"
				config-type="bean">
				<targetBean>genericLeaveActionHandler
				</targetBean>
			</action>
		</event>			
		<transition to="P64_registrarCumplimiento" name="avanzaBPM"></transition>
		<transition to="P64_registrarConvenio" name="activarAlerta"></transition>
		<transition to="Fin" name="Fin"></transition>
	</state>

	<state name="P64_registrarCumplimiento">
		<event type="node-enter">
			<action name="miTarea"
				class="org.springmodules.workflow.jbpm31.JbpmHandlerProxy"
				config-type="bean">
				<targetBean>genericEnterActionHandler
				</targetBean>
			</action>
		</event>
		<event type="node-leave">
			<action name="miTarea"
				class="org.springmodules.workflow.jbpm31.JbpmHandlerProxy"
				config-type="bean">
				<targetBean>genericLeaveActionHandler
				</targetBean>
			</action>
		</event>			
		<transition to="P64_registrarCumplimientoDecision" name="avanzaBPM"></transition>
		<transition to="P64_registrarCumplimiento" name="activarAlerta"></transition>
		<transition to="P64_registrarConvenio" name="vueltaAtras"></transition>
		<transition to="Fin" name="Fin"></transition>
	</state>

	<node name="Decision">
		<action name="miTarea" config-type="bean" 
			class="org.springmodules.workflow.jbpm31.JbpmHandlerProxy">
         	<targetBean>genericUserDecisionActionHandler</targetBean>
      	</action>	
      	<transition to="Fin"></transition>
	</node>

	<decision name="P64_registrarCumplimientoDecision" expression="#{P64_registrarCumplimientoDecision}">
		<transition to="P64_validarFinSeguimiento" name="cumpleTerminar"></transition>
		<transition to="Decision" name="incumple"></transition>
		<transition to="P64_registrarCumplimiento" name="cumpleSeguir"></transition>
	</decision>

	<state name="P64_validarFinSeguimiento">
		<event type="node-enter">
			<action name="miTarea"
				class="org.springmodules.workflow.jbpm31.JbpmHandlerProxy"
				config-type="bean">
				<targetBean>genericEnterActionHandler
				</targetBean>
			</action>
		</event>
		<event type="node-leave">
			<action name="miTarea"
				class="org.springmodules.workflow.jbpm31.JbpmHandlerProxy"
				config-type="bean">
				<targetBean>genericLeaveActionHandler
				</targetBean>
			</action>
		</event>
		<transition to="P64_validarFinSeguimientoDecision" name="avanzaBPM"></transition>
		<transition to="P64_validarFinSeguimiento" name="activarAlerta"></transition>
		<transition to="Fin" name="Fin"></transition>
	</state>

	<decision name="P64_validarFinSeguimientoDecision"  expression="#{P64_validarFinSeguimientoDecision}">
		<transition to="Fin" name="Aprovado"></transition>
		<transition to="P64_registrarCumplimiento" name="noAprovado"></transition>
	</decision>

	<state name="P64_espera">
		<event type="node-enter">
			<action class="es.pfsgroup.procedimientos.GenericTimerDelayActionHandler" config-type="field">
				<name>Timer espera - TEJ</name>
				<duration>6 months</duration>
				<transicion>avanzaBPM</transicion>
			</action>
		</event>
		<transition to="P64_registrarCumplimiento" name="avanzaBPM"></transition>
	</state>


	<end-state name="Fin">
		<event type="node-enter">
			<action name="myAction" config-type="bean"
				class="org.springmodules.workflow.jbpm31.JbpmHandlerProxy">
				<targetBean>endProcessActionHandler
				</targetBean>
			</action>
		</event>
	</end-state>


</process-definition>