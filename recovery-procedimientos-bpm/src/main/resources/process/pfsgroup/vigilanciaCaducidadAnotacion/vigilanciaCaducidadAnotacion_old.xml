<?xml version="1.0" encoding="UTF-8"?>
<process-definition name="vigilanciaCaducidadAnotacion"
	xmlns="urn:jbpm.org:jpdl-3.2">

	<start-state name="Inicio">
		<transition to="P60_RegistrarAnotacion"></transition>
	</start-state>

	<state name="P60_RegistrarAnotacion">
		<event type="node-enter">
			<action name="miTarea"
				class="org.springmodules.workflow.jbpm31.JbpmHandlerProxy"
				config-type="bean">
				<targetBean>genericEnterActionHandler</targetBean>
			</action>
		</event>
		<event type="node-leave">
			<action name="miTarea"
				class="org.springmodules.workflow.jbpm31.JbpmHandlerProxy"
				config-type="bean">
				<targetBean>genericLeaveActionHandler</targetBean>
			</action>
		</event>
		<transition to="P60_RegistrarAnotacion" name="activarAlerta"></transition>
		<transition to="P60_RegistrarAnotacionDecision" name="avanzaBPM"></transition>
		<transition to="Fin" name="Fin"></transition>
	</state>

	<decision name="P60_RegistrarAnotacionDecision" expression="#{P60_RegistrarAnotacionDecision}">
		<transition to="Fin" name="avanzaBPM"></transition>
		<transition to="P60_Repeticion" name="repite"></transition>
	</decision>

	<state name="P60_RevisarRegistroDeEmbargo">
		<event type="node-enter">
			<action name="miTarea"
				class="org.springmodules.workflow.jbpm31.JbpmHandlerProxy"
				config-type="bean">
				<targetBean>genericEnterActionHandler</targetBean>
			</action>
		</event>
		<event type="node-leave">
			<action name="miTarea"
				class="org.springmodules.workflow.jbpm31.JbpmHandlerProxy"
				config-type="bean">
				<targetBean>genericLeaveActionHandler</targetBean>
			</action>
		</event>
		<transition to="P60_RevisarRegistroDeEmbargoDecision" name="avanzaBPM"></transition>
		<transition to="Fin" name="Fin"></transition>
		<transition to="P60_RevisarRegistroDeEmbargo" name="activarAlerta"></transition>
	</state>

	<decision name="P60_RevisarRegistroDeEmbargoDecision" expression="#{P60_RevisarRegistroDeEmbargoDecision}">
		<transition to="Fin" name="terminar"></transition>
		<transition to="P60_Repeticion" name="recordatorio"></transition>
	</decision>

	<state name="P60_Repeticion">
        <event type="node-enter">
			<action class="es.pfsgroup.procedimientos.GenericTimerDelayActionHandler" config-type="field">
				<name>Timer de espera 42 meses</name>
				<duration>42 months</duration>
				<transicion>avanzaBPM</transicion>
			</action>
		</event>
		<transition to="P60_RevisarRegistroDeEmbargo" name="avanzaBPM"></transition>
	</state>

	<end-state name="Fin">
		<event type="node-enter">
			<action name="myAction" config-type="bean"
				class="org.springmodules.workflow.jbpm31.JbpmHandlerProxy">
				<targetBean>endProcessActionHandler
				</targetBean>
			</action>
		</event>
	</end-state>

</process-definition>