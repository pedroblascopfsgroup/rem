<?xml version="1.0" encoding="UTF-8"?>
<project
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
	xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">	
	
	<parent>
		<groupId>es.pfsgroup</groupId>
		<artifactId>recovery-parent-pom</artifactId>
		<version>0.0.28</version>
	</parent>
	
	<properties>
		<version>1.3.11</version>
		<sufijo>-SNAPSHOT</sufijo>		
	</properties>

	<modelVersion>4.0.0</modelVersion>
	<groupId>es.pfsgroup.plugin</groupId>
	<artifactId>recovery-procedimientos-bpmHaya</artifactId>
	<version>${version}${sufijo}</version>
	<name>recovery-procedimientos-bpmHaya</name>
	<url>http://maven.apache.org</url>
	
	<distributionManagement>
	    <repository>
	        <id>pfsrepo</id>
	        <url>scp://interecovery.pfsgroup.es/shared/maven</url>
	    </repository>
    </distributionManagement>

    <repositories>
	    <repository>
	        <id>pfsrepo</id>
	        <url>http://interecovery.pfsgroup.es:8086</url>
	    </repository>
	    <repository>
	        <id>Framework</id>
	        <url>http://192.168.0.143:8458/nexus/content/repositories/Framework</url>
	    </repository>
	    <repository>
	        <id>com.springsource.repository.bundles.release</id>
	        <name>SpringSource Enterprise Bundle Repository - SpringSource Bundle Releases</name>
	        <url>http://repository.springsource.com/maven/bundles/release</url>
	    </repository>
	    <repository>
	        <id>com.springsource.repository.bundles.external</id>
	        <name>SpringSource Enterprise Bundle Repository - External Bundle Releases</name>
	        <url>http://repository.springsource.com/maven/bundles/external</url>
	    </repository>
    </repositories>	

	<dependencies>	
		<dependency>
			<groupId>es.pfsgroup.plugin</groupId>
			<artifactId>recovery-coreextension-plugin</artifactId>
			<type>jar</type>
		</dependency>
		
		<dependency>
			<groupId>es.pfsgroup.plugin</groupId>
			<artifactId>recovery-mejoras-plugin</artifactId>
			<type>jar</type>
		</dependency>
		
		<dependency>
			<groupId>es.pfsgroup.plugin</groupId>
			<artifactId>recovery-api-plugin</artifactId>
			<optional>true</optional>
		</dependency>				
		
		<dependency>
			<artifactId>recovery-procedimientos-bpm</artifactId>
			<groupId>es.pfsgroup.plugin</groupId>
			<type>jar</type>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>es.pfsgroup</groupId>
			<artifactId>recovery-domain</artifactId>
			<type>jar</type>
		</dependency>	
		 
		 <!-- ESTE SÍ QUE HACE FALTA PARA LOS HANDLERS --> 		
		<dependency>
			<groupId>org.springframework.batch</groupId>
			<artifactId>spring-batch-core</artifactId>
			<version>1.0.1.RELEASE</version>
			<optional>true</optional>
		</dependency>
		<dependency>
			<groupId>org.springframework</groupId>
			<artifactId>spring-webmvc</artifactId>
			<version>2.5.6</version>
			<optional>true</optional>
		</dependency>

		 <!-- ESTE SÍ QUE HACE FALTA PARA LOS HANDLERS -->
		<dependency>
			<groupId>es.pfsgroup</groupId>
			<artifactId>pfs-commons-java</artifactId>
			<version>2.2.8</version>
			<optional>true</optional>
		</dependency>
		
	</dependencies>
	
	<build>
		<resources>
			<resource>
				<directory>src\main\resources</directory>
			</resource>
			<resource>
				<directory>src//main//resources</directory>
			</resource>		
		</resources>
		<plugins>
			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>1.6</source>
					<target>1.6</target>
					<encoding>UTF-8</encoding>
				</configuration>
			</plugin>
		</plugins>
	</build>			
					
</project>
