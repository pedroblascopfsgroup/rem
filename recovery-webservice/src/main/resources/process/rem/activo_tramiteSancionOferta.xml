<?xml version="1.0" encoding="UTF-8"?>

<process-definition xmlns="urn:jbpm.org:jpdl-3.2" name="activo_tramiteSancionOferta">
	
	<start-state name="inicio">
		<transition to="router"></transition>
	</start-state>	

	<!--  Router BPM  -->
	<node name="router">
		<action name="miTarea"
				class="org.springmodules.workflow.jbpm31.JbpmHandlerProxy"
				config-type="bean">
			<targetBean>
				routerBPMSancionOfertaHandler
			</targetBean>
		</action>
		<!--  Avance a otros nodos dependiendo del "target" devuelto por el router(actua como si fuera el nodo de <decision></decision>) -->
		
		<transition to="forkYubai" name="inicioTramiteVentaSobrePlano"></transition>
		<transition to="T013_DefinicionOferta" name="avanzaBPM"></transition>
		<transition to="T013_InstruccionesReserva" name="T013_InstruccionesReserva"></transition>
		<transition to="T013_PosicionamientoYFirma" name="T013_PosicionamientoYFirma"></transition>
		<transition to="T013_ResolucionExpediente" name="T013_ResolucionExpediente"></transition>
	</node>	
	
	<fork name="forkYubai">
		<transition to="T013_DefinicionOferta" name="oferta"></transition>
	</fork>
	
	<state name="T013_DefinicionOferta">
		<event type="node-enter">
			<action name="miTarea"
				class="org.springmodules.workflow.jbpm31.JbpmHandlerProxy"
				config-type="bean">
				<targetBean>
					activoGenericEnterActionHandler
				</targetBean>
			</action>
		</event>
		<event type="node-leave">
			<action name="miTarea"
				class="org.springmodules.workflow.jbpm31.JbpmHandlerProxy"
				config-type="bean">
				<targetBean>
					activoGenericLeaveActionHandler
				</targetBean>
			</action>
		</event>
		<transition to="T013_DefinicionOfertaDecision" name="avanzaBPM"></transition>
	</state>

	<decision name ="T013_DefinicionOfertaDecision" expression="#{T013_DefinicionOfertaDecision}">
		<transition to="T013_FirmaPropietario" name="SinFormalizacion"></transition>
		<transition to="T013_ResultadoPBC" name="ConFormalizacionConTanteo"></transition>
<!-- 		<transition to="T013_PosicionamientoYFirma" name="ConFormalizacionDeTanteo"></transition> -->
		<transition to="T013_ResolucionComite" name="ConFormalizacionSinTanteoSinAtribucion"></transition>
		<transition to="forkReserva" name="ConFormalizacionSinTanteoConAtribucionConReserva"></transition>
		<transition to="forkSinReservaSinTanteo" name="ConFormalizacionSinTanteoConAtribucionSinReservaSinTanteo"></transition>
		<transition to="forkReservaCajamar" name="ApruebaConReservaCajamar"></transition>
		<transition to="forkSinReservaSinTanteoCajamar" name="ApruebaSinReservaSinTanteoCajamar"></transition>
		<transition to="T013_ResultadoPBC" name="esYubai"></transition>
		<transition to="T013_PBCReserva" name="esOmegaConReserva"></transition>
		<transition to="T013_ResultadoPBC" name="esOmegaSinReserva"></transition>
		<transition to="T013_PBCReserva" name="ConFormalizacionSinTanteoConAtribucionConReservaTitulizada"></transition>
	</decision>
	
	<state name="T013_PBCReserva">
		<event type="node-enter">
			<action name="miTarea"
				class="org.springmodules.workflow.jbpm31.JbpmHandlerProxy"
				config-type="bean">
				<targetBean>
					activoGenericEnterActionHandler
				</targetBean>
			</action>
		</event>
		<event type="node-leave">
			<action name="miTarea"
				class="org.springmodules.workflow.jbpm31.JbpmHandlerProxy"
				config-type="bean">
				<targetBean>
					activoGenericLeaveActionHandler
				</targetBean>
			</action>
		</event>
		<transition to="T013_PBCReservaDecision" name="avanzaBPM"></transition>
	</state>
	
	<decision name ="T013_PBCReservaDecision" expression="#{T013_PBCReservaDecision}">
		<transition to="T013_ResultadoPBC" name="Aprueba"></transition>
		<transition to="T013_ResolucionExpediente" name="Deniega"></transition>
		<transition to="forkReserva" name="ApruebaTitulizada"></transition>
	</decision>


	<state name="T013_FirmaPropietario">
		<event type="node-enter">
			<action name="miTarea"
				class="org.springmodules.workflow.jbpm31.JbpmHandlerProxy"
				config-type="bean">
				<targetBean>
					activoGenericEnterActionHandler
				</targetBean>
			</action>
		</event>
		<event type="node-leave">
			<action name="miTarea"
				class="org.springmodules.workflow.jbpm31.JbpmHandlerProxy"
				config-type="bean">
				<targetBean>
					activoGenericLeaveActionHandler
				</targetBean>
			</action>
		</event>
		<transition to="T013_FirmaPropietarioDecision" name="avanzaBPM"></transition>
	</state>
	
	<decision name ="T013_FirmaPropietarioDecision" expression="#{T013_FirmaPropietarioDecision}">
		<transition to="T013_CierreEconomico" name="Si"></transition>
		<transition to="Fin" name="No"></transition>
	</decision>
	
	
	<state name="T013_CierreEconomico">
		<event type="node-enter">
			<action name="miTarea"
				class="org.springmodules.workflow.jbpm31.JbpmHandlerProxy"
				config-type="bean">
				<targetBean>
					activoGenericEnterActionHandler
				</targetBean>
			</action>
		</event>
		<event type="node-leave">
			<action name="miTarea"
				class="org.springmodules.workflow.jbpm31.JbpmHandlerProxy"
				config-type="bean">
				<targetBean>
					ActivoGenericSaveActionHandler
				</targetBean>
			</action>
		</event>
		<transition to="Fin" name="avanzaBPM"></transition>
	</state>
	
	<state name="T013_ResolucionComite">
		<event type="node-enter">
			<action name="miTarea"
				class="org.springmodules.workflow.jbpm31.JbpmHandlerProxy"
				config-type="bean">
				<targetBean>
					activoGenericEnterActionHandler
				</targetBean>
			</action>
		</event>
		<event type="node-leave">
			<action name="miTarea"
				class="org.springmodules.workflow.jbpm31.JbpmHandlerProxy"
				config-type="bean">
				<targetBean>
					activoGenericLeaveActionHandler
				</targetBean>
			</action>
		</event>
		<transition to="T013_ResolucionComiteDecision" name="avanzaBPM"></transition>
	</state>
	
	<decision name ="T013_ResolucionComiteDecision" expression="#{T013_ResolucionComiteDecision}">
		<transition to="Fin" name="Rechaza"></transition>
		<transition to="T013_RespuestaOfertante" name="Contraoferta"></transition>
		<transition to="forkReserva" name="ApruebaConReserva"></transition>
		<transition to="forkSinReservaSinTanteo" name="ApruebaSinReservaSinTanteo"></transition>
		<transition to="forkReservaCajamar" name="ApruebaConReservaCajamar"></transition>
		<transition to="forkSinReservaSinTanteoCajamar" name="ApruebaSinReservaSinTanteoCajamar"></transition>
		<transition to="T013_ResultadoPBC" name="esYubai"></transition>
		<transition to="T013_PBCReserva" name="ApruebaConReservaTitulizada"></transition>
	</decision>

	<state name="T013_RespuestaOfertante">
		<event type="node-enter">
			<action name="miTarea"
				class="org.springmodules.workflow.jbpm31.JbpmHandlerProxy"
				config-type="bean">
				<targetBean>
					activoGenericEnterActionHandler
				</targetBean>
			</action>
		</event>
		<event type="node-leave">
			<action name="miTarea"
				class="org.springmodules.workflow.jbpm31.JbpmHandlerProxy"
				config-type="bean">
				<targetBean>
					activoGenericLeaveActionHandler
				</targetBean>
			</action>
		</event>
		<transition to="T013_RespuestaOfertanteDecision" name="avanzaBPM"></transition>
	</state>
	
	<decision name ="T013_RespuestaOfertanteDecision" expression="#{T013_RespuestaOfertanteDecision}">
		<transition to="T013_RatificacionComite" name="AceptaBankia"></transition>
		<transition to="forkReserva" name="AceptaConReserva"></transition>
		<transition to="T013_ResultadoPBC" name="esYubai"></transition>
		<transition to="forkSinReservaSinTanteo" name="AceptaSinReservaSinTanteo"></transition>
		<transition to="forkReservaCajamar" name="AceptaConReservaCajamar"></transition>
		<transition to="forkSinReservaSinTanteoCajamar" name="AceptaSinReservaSinTanteoCajamar"></transition>
		<transition to="Fin" name="Rechaza"></transition>
	</decision>

	<state name="T013_RatificacionComite">
		<event type="node-enter">
			<action name="miTarea"
				class="org.springmodules.workflow.jbpm31.JbpmHandlerProxy"
				config-type="bean">
				<targetBean>
					activoGenericEnterActionHandler
				</targetBean>
			</action>
		</event>
		<event type="node-leave">
			<action name="miTarea"
				class="org.springmodules.workflow.jbpm31.JbpmHandlerProxy"
				config-type="bean">
				<targetBean>
					activoGenericLeaveActionHandler
				</targetBean>
			</action>
		</event>
		<transition to="T013_RatificacionComiteDecision" name="avanzaBPM"></transition>
	</state>
	
	<decision name="T013_RatificacionComiteDecision" expression="#{T013_RatificacionComiteDecision}">
		<transition to="forkReserva" name="AceptaConReserva"></transition>
		<transition to="T013_RespuestaOfertante" name="Contraoferta"></transition>
		<transition to="forkSinReservaSinTanteo" name="AceptaSinReservaSinTanteo"></transition>
		<transition to="T013_ResultadoPBC" name="esYubai"></transition>
		<transition to="Fin" name="Rechaza"></transition>
	</decision>
	
	<fork name="forkReserva">
		<transition to="T013_InstruccionesReserva" name="reserva"></transition>
	</fork>
	
	<fork name="forkSinReservaSinTanteo">
		<transition to="T013_ResultadoPBC" name="resultado"></transition>
	</fork>

	<fork name="forkReservaCajamar">
		<transition to="T013_InstruccionesReserva" name="reserva"></transition>
	</fork>
	
	<fork name="forkSinReservaSinTanteoCajamar">
		<transition to="T013_ResultadoPBC" name="resultado"></transition>
	</fork>
	<state name="T013_InstruccionesReserva">
		<event type="node-enter">
			<action name="miTarea"
				class="org.springmodules.workflow.jbpm31.JbpmHandlerProxy"
				config-type="bean">
				<targetBean>
					activoGenericEnterActionHandler
				</targetBean>
			</action>
		</event>
		<event type="node-leave">
			<action name="miTarea"
				class="org.springmodules.workflow.jbpm31.JbpmHandlerProxy"
				config-type="bean">
				<targetBean>
					activoGenericLeaveActionHandler
				</targetBean>
			</action>
		</event>
		<transition to="forkSinTanteo" name="avanzaBPM"></transition>
	</state>
		
	<fork name="forkSinTanteo">
		<transition to="T013_ObtencionContratoReserva" name="obtencion"></transition>
		<transition to="T013_ResultadoPBC" name="resultado"></transition>
	</fork>
	
	<state name="T013_ResultadoPBC">
		<event type="node-enter">
			<action name="miTarea"
				class="org.springmodules.workflow.jbpm31.JbpmHandlerProxy"
				config-type="bean">
				<targetBean>
					resultadoPBCEnterActionHandler
				</targetBean>
			</action>
		</event>
		<event type="node-leave">
			<action name="miTarea"
				class="org.springmodules.workflow.jbpm31.JbpmHandlerProxy"
				config-type="bean">
				<targetBean>
					activoGenericLeaveActionHandler
				</targetBean>
			</action>
		</event>
		<transition to="T013_ResultadoPBCDecision" name="avanzaBPM"></transition>
	</state>
	
	<decision name ="T013_ResultadoPBCDecision" expression="#{T013_ResultadoPBCDecision}">
		<transition to="router" name="esYubai"></transition>
		<transition to="T013_PosicionamientoYFirma" name="Aprobado"></transition>
		<transition to="T013_FirmaPropietario" name="esOmegaAprobado"></transition>
		<transition to="T013_ResolucionExpediente" name="NoAprobadoConReserva"></transition>
		<transition to="Fin" name="NoAprobadoSinReserva"></transition>
	</decision>
	
	<state name="T013_ObtencionContratoReserva">
		<event type="node-enter">
			<action name="miTarea"
				class="org.springmodules.workflow.jbpm31.JbpmHandlerProxy"
				config-type="bean">
				<targetBean>
					activoGenericEnterActionHandler
				</targetBean>
			</action>
		</event>
		<event type="node-leave">
			<action name="miTarea"
				class="org.springmodules.workflow.jbpm31.JbpmHandlerProxy"
				config-type="bean">
				<targetBean>
					activoGenericLeaveActionHandler
				</targetBean>
			</action>
		</event>
		<transition to="Fin" name="avanzaBPM"></transition>
	</state>
	
	<state name="T013_PosicionamientoYFirma">
		<event type="node-enter">
			<action name="miTarea"
				class="org.springmodules.workflow.jbpm31.JbpmHandlerProxy"
				config-type="bean">
				<targetBean>
					activoGenericEnterActionHandler
				</targetBean>
			</action>
		</event>
		<event type="node-leave">
			<action name="miTarea"
				class="org.springmodules.workflow.jbpm31.JbpmHandlerProxy"
				config-type="bean">
				<targetBean>
					posicionamientoYFirmaLeaveActionHandler
				</targetBean>
			</action>
		</event>
		<transition to="T013_PosicionamientoYFirmaDecision" name="avanzaBPM"></transition>
	</state>
	
	<decision name ="T013_PosicionamientoYFirmaDecision" expression="#{T013_PosicionamientoYFirmaDecision}">
		<transition to="T013_DevolucionLlaves" name="SinFirma"></transition>
		<transition to="forkPostFirma" name="ConFirma"></transition>
	</decision>
	
	<state name="T013_ResolucionExpediente">
		<event type="node-enter">
			<action name="miTarea"
				class="org.springmodules.workflow.jbpm31.JbpmHandlerProxy"
				config-type="bean">
				<targetBean>
					resolucionExpedienteEnterActionHandler
				</targetBean>
			</action>
		</event>
		<event type="node-leave">
			<action name="miTarea"
				class="org.springmodules.workflow.jbpm31.JbpmHandlerProxy"
				config-type="bean">
				<targetBean>
					activoGenericLeaveActionHandler
				</targetBean>
			</action>
		</event>
		<transition to="T013_ResolucionExpedienteDecision" name="avanzaBPM"></transition>
	</state>
	
	<decision name="T013_ResolucionExpedienteDecision" expression="#{T013_ResolucionExpedienteDecision}">
		<transition to="T013_RespuestaBankiaDevolucion" name="avanzaRespuestaBankia"></transition>
		<transition to="T013_PendienteDevolucion" name="avanzaPendienteDevol"></transition>
		<transition to="Fin" name="noAvanzaRespuestaBankia"></transition>
	</decision>
	
	<state name="T013_RespuestaBankiaDevolucion">
		<event type="node-enter">
			<action name="miTarea"
				class="org.springmodules.workflow.jbpm31.JbpmHandlerProxy"
				config-type="bean">
				<targetBean>
					activoGenericEnterActionHandler
				</targetBean>
			</action>
		</event>
		<event type="node-leave">
			<action name="miTarea"
				class="org.springmodules.workflow.jbpm31.JbpmHandlerProxy"
				config-type="bean">
				<targetBean>
					activoGenericLeaveActionHandler
				</targetBean>
			</action>
		</event>
		<transition to="T013_PendienteDevolucion" name="avanzaBPM"></transition>
	</state>
	
	<state name="T013_PendienteDevolucion">
		<event type="node-enter">
			<action name="miTarea"
				class="org.springmodules.workflow.jbpm31.JbpmHandlerProxy"
				config-type="bean">
				<targetBean>
					activoGenericEnterActionHandler
				</targetBean>
			</action>
		</event>
		<event type="node-leave">
			<action name="miTarea"
				class="org.springmodules.workflow.jbpm31.JbpmHandlerProxy"
				config-type="bean">
				<targetBean>
					activoGenericLeaveActionHandler
				</targetBean>
			</action>
		</event>
		<transition to="T013_RespuestaBankiaAnulacionDevolucion" name="avanzaBPM"></transition>
	</state>
	
	<state name="T013_RespuestaBankiaAnulacionDevolucion">
		<event type="node-enter">
			<action name="miTarea"
				class="org.springmodules.workflow.jbpm31.JbpmHandlerProxy"
				config-type="bean">
				<targetBean>
					activoGenericEnterActionHandler
				</targetBean>
			</action>
		</event>
		<event type="node-leave">
			<action name="miTarea"
				class="org.springmodules.workflow.jbpm31.JbpmHandlerProxy"
				config-type="bean">
				<targetBean>
					activoGenericLeaveActionHandler
				</targetBean>
			</action>
		</event>
		<transition to="Fin" name="avanzaBPM"></transition>
	</state>
	
	<state name="T013_DevolucionLlaves">
		<event type="node-enter">
			<action name="miTarea"
				class="org.springmodules.workflow.jbpm31.JbpmHandlerProxy"
				config-type="bean">
				<targetBean>
					activoGenericEnterActionHandler
				</targetBean>
			</action>
		</event>
		<event type="node-leave">
			<action name="miTarea"
				class="org.springmodules.workflow.jbpm31.JbpmHandlerProxy"
				config-type="bean">
				<targetBean>
					activoGenericLeaveActionHandler
				</targetBean>
			</action>
		</event>
		<transition to="T013_DevolucionLlavesDecision" name="avanzaBPM"></transition>
	</state>
	
	<decision name ="T013_DevolucionLlavesDecision" expression="#{T013_DevolucionLlavesDecision}">
		<transition to="T013_ResolucionExpediente" name="ConReserva"></transition>
		<transition to="Fin" name="SinReserva"></transition>
	</decision>
	
	<fork name="forkPostFirma">
		<transition to="T013_DocumentosPostVenta" name="documentos"></transition>
		<transition to="T013_CierreEconomico" name="cierre"></transition>
	</fork>
	
	<state name="T013_DocumentosPostVenta">
		<event type="node-enter">
			<action name="miTarea"
				class="org.springmodules.workflow.jbpm31.JbpmHandlerProxy"
				config-type="bean">
				<targetBean>
					activoGenericEnterActionHandler
				</targetBean>
			</action>
		</event>
		<event type="node-leave">
			<action name="miTarea"
				class="org.springmodules.workflow.jbpm31.JbpmHandlerProxy"
				config-type="bean">
				<targetBean>
					activoGenericLeaveActionHandler
				</targetBean>
			</action>
		</event>
		<transition to="Fin" name="avanzaBPM"></transition>
	</state>
	
	<state name="T013_ValidacionClientes">
		<event type="node-enter">
			<action name="miTarea"
				class="org.springmodules.workflow.jbpm31.JbpmHandlerProxy"
				config-type="bean">
				<targetBean>
					activoGenericEnterActionHandler
				</targetBean>
			</action>
		</event>
		<event type="node-leave">
			<action name="miTarea"
				class="org.springmodules.workflow.jbpm31.JbpmHandlerProxy"
				config-type="bean">
				<targetBean>
					activoGenericLeaveActionHandler
				</targetBean>
			</action>
		</event>
		<transition to="Fin" name="avanzaBPM"></transition>
	</state>
	
	<end-state name="Fin">
		<event type="node-enter">
			<action name="myAction" config-type="bean"
				class="org.springmodules.workflow.jbpm31.JbpmHandlerProxy">
				<targetBean>activoEndProcessActionHandler
				</targetBean>
			</action>
		</event>
	</end-state>

</process-definition>
