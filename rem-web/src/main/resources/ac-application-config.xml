   <bean id="messageSource" parent="fwk.messageSource">
        <property name="basenames"  >
            <list merge="true">
                <value>/WEB-INF/config/appMessages</value>
                <value>/WEB-INF/appMessages</value>
                <!-- Agregado temporal para importar mensages de PFS-GROUP -->
                <value>/WEB-INF/config/appMessagesPFS</value>
            </list>
        </property> 
        <property name="cacheSeconds" value="1800"/>
    </bean>

  
