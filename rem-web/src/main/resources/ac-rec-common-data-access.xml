    </property>
    </bean>
  
  <bean name="jmx.authenticator" class="es.capgemini.devon.jmx.SimpleJMXAuthenticator">
  	 <property name="user" value="${jmx.user}"/>
  	 <property name="password" value="${jmx.password}"/>
  </bean>
  
</beans>
