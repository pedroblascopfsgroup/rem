<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">

    <var name="dto" class="es.capgemini.pfs.users.dto.DtoBuscarUsuarios"/>

	<!-- renderiza el formulario -->
    <view-state id="listado" view="admin/listadoUsuarios" model="dto">
    	<transition on="getData" to="getData1"  />
    </view-state> 	
    
    
    <!--a partir de este momento sÃ³lo enviamos ajax -->
    <view-state id="getData1" view="admin/listadoUsuariosJSON" model="dto">
		<on-render>
			<evaluate expression="executor.execute('usuarioManager.findUsersPage', dto)" result="flowScope.pagina"/>
		</on-render>
		<transition on="getData" to="getData1" />
	</view-state>
	
    
</flow>