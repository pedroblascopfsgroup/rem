<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">

	<var name="ingreso" class="es.capgemini.pfs.ingreso.model.Ingreso" />
	<var name="dtoIngreso" class="es.capgemini.pfs.ingreso.dto.DtoIngreso" />

	<input name="id" type="java.lang.Long"/>
	<input name="idPersona" type="java.lang.Long"/>

	<decision-state id="newOrEdit">
		<if test="id!=null" then="buscar" else="formulario"/>
	</decision-state>
	
	
	<action-state id="buscar">
			<evaluate expression="executor.execute('ingresoManager.getIngreso', id)" result="flowScope.ingreso"/>
			<transition to="formulario" />
	</action-state>


    <view-state id="formulario" view="${view}" model="dtoIngreso">
    	<binder>
    		<binding property="ingreso.periodicidad"/>
    		<binding property="ingreso.ingNetoBruto"/>
    		<binding property="idTipoIngreso"/>
    		<binding property="ingreso.tipoIngreso" converter="DDTipoIngreso"/>
    		<!-- <binding property="fecha"/> -->
    	</binder>
    	
    	<on-entry>
    		<set name="dtoIngreso.ingreso" value="ingreso" />
    		<set name="flowScope.view" value="'clientes/ingresos.js'" />
    	</on-entry>
    	<on-render>
			<!-- a partir de la segunda vez, la respuesta ya debe ser json  por tanto
			cambiaremos el nombre de la vista a 'default' -->
			<set name="flowScope.view" value="'default'"/>
			<evaluate expression="executor.execute('ingresoManager.getListTipoIngreso')" result="flashScope.tiposIngreso" />
		</on-render>
		<transition on="update" to="update"/>
		<transition on="cancel" to="close" bind="false"/>
    </view-state> 	
    
    <action-state id="update">
    	<evaluate expression="executor.execute('ingresoManager.createOrUpdate', dtoIngreso, idPersona)" />
		<!-- <transition on-exception="java.lang.Exception" to="formulario" /> -->
		<transition to="close"></transition>
	</action-state>
	
	<end-state id="close" view="default" />

</flow>
