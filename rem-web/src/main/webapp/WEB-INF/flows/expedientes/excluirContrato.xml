<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">

	<var name="dto" class="es.capgemini.pfs.expediente.dto.DtoInclusionExclusionContratoExpediente" />

	<input name="idExpediente" type="java.lang.Long" />

	<action-state id="decisionIniciada">
			<evaluate expression="executor.execute('expedienteManager.existeDecisionIniciada', idExpediente)" />
			<transition to="update" />
	</action-state>

    <end-state id="update" view="default">
    	<on-entry>
    		<evaluate expression="binder.bindAndValidate(flowRequestContext,dto)" />
    		<evaluate expression="executor.execute('expedienteManager.excluirContratosAlExpediente', dto)" />
    	</on-entry>
	</end-state>

</flow>
