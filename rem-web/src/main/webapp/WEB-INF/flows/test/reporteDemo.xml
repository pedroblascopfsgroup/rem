<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">
    
    <input name="tipo" />
        
    <decision-state id="decideVista">
    	<on-entry>
    		 <evaluate expression="executor.execute('personaManager.getList')" result="flowScope.personas"/>
    	</on-entry>
    	<if test="tipo=='generaPDF'"  then="generaPDF" else="generaHTML"/>
    </decision-state>
    
    <end-state id="generaPDF" view="reportPDF/personasDemo"/>
    
    <end-state id="generaHTML" view="reportHTML/personasDemo"/>

</flow>
