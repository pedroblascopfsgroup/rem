<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">

    <var name="dtoCliente" class="es.capgemini.pfs.persona.dto.EXTDtoBuscarClientes"/>

    
    <!--a partir de este momento sÃ³lo enviamos ajax -->
    <end-state id="listado" view="clientes/listadoClientesJSON" >
		<on-entry>
			<evaluate expression="binder.bindAndValidate(flowRequestContext, dtoCliente)" />
			<evaluate expression="executor.execute('plugin.coreextension.persona.findClientesProveedorSolvencia', dtoCliente)" result="flowScope.pagina"/>
		</on-entry>
	</end-state>
	
    
</flow>