<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">

	<var name="dtoTarea" class="es.capgemini.pfs.tareaNotificacion.dto.DtoGenerarTarea" />
	<input name="idEntidad" type="java.lang.Long"/>
	<input name="codigoTipoEntidad" type="java.lang.String"/>
	<input name="descripcion" type="java.lang.String"/>
	<input name="fecha" type="java.util.Date"/>
	<input name="tienePerfilGestor" type="java.lang.Boolean"/>
	<input name="tienePerfilSupervisor" type="java.lang.Boolean"/>
	<input name="subtipoTarea" type="java.lang.String"/>
		
    <view-state id="formulario" view="${view}" model="dtoTarea">
    	<binder>
    		<binding property="descripcion" />
    		<binding property="idEntidad"/>
    		<binding property="codigoTipoEntidad"/>
    		<binding property="reqRes"/>
    		<binding property="fecha"/>
    		<binding property="subtipoTarea"/>
		</binder>
    	<on-entry>
    		<set name="codigoTipoEntidad" value="codigoTipoEntidad" />
    		<set name="idEntidad" value="idEntidad" />
			<evaluate expression="executor.execute('es.pfsgroup.recovery.mejoras.api.procedimiento.esGestorCex',idEntidad,codigoTipoEntidad)" result="flowScope.esGestorCex"/>
			<evaluate expression="executor.execute('es.pfsgroup.recovery.mejoras.api.procedimiento.esSupervisorCex',idEntidad,codigoTipoEntidad)" result="flowScope.esSupervisorCex"/> 
    		<set name="flowScope.view" value="'plugin/mejoras/tareas/generarTarea'" />
    	</on-entry>
		
    	<on-render>
			<!-- a partir de la segunda vez, la respuesta ya debe ser json  por tanto
			cambiaremos el nombre de la vista a 'default'--> 
			<set name="flowScope.view" value="'default'"/>
			<!--
			<evaluate expression="executor.execute('tipoBien.getList')" result="flashScope.tiposBien"/>
			-->
		</on-render>
		
		<transition on="update" to="update"/>
		<transition on="cancel" to="close" bind="false"/>
    </view-state> 	
    
    <action-state id="update">
    	<evaluate expression="executor.execute('tareaNotificacionManager.crearTareaComunicacion',dtoTarea)" /> 
	    <transition on-exception="java.lang.Exception" to="formulario" /> 
		<transition to="close"></transition>
	</action-state>
	
	<end-state id="close" view="default" />
        
</flow>
