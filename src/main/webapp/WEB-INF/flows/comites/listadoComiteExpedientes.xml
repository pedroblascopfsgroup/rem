<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">
  
   <input name="idComite" type="java.lang.Long" />
  
  <!-- renderiza la lista de expedientes -->
    <view-state id="loadComite" view="comites/listadoComiteExpedientes">
        <on-entry>
            <evaluate expression="executor.execute('comiteManager.get', idComite)" result="flowScope.comite" />
            <evaluate expression="comite.getUltimaSesion().getId()" result="flowScope.idSesion" />
            <evaluate expression="executor.execute('comiteManager.getDtoParaSesion', idSesion)" result="flowScope.dtoSesionComite" />
        </on-entry>
        <transition on="listadoAsistentes" to="listadoAsistentes" />
    </view-state>
       
    <view-state id="listadoAsistentes" view="comites/asistentesJSON" />
      
</flow>