<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">

	<var name="dtoBusquedaDespachoExterno"
		class="es.pfsgroup.plugin.recovery.config.despachoExterno.dto.ADMDtoBusquedaDespachoExterno" />


	<!--a partir de este momento sÃ³lo enviamos ajax -->
	<end-state id="listado"
		view="plugin/config/despachoExterno/listadoDespachosExternosPaginadoJSON">
		<secured attributes="ROLE_ADMIN" match="any" />
		<on-entry>
			<evaluate
				expression="binder.bindAndValidate(flowRequestContext,dtoBusquedaDespachoExterno)" />
			<evaluate
				expression="executor.execute('ADMDespachoExternoManager.findDespachosExternos',dtoBusquedaDespachoExterno)"
				result="flowScope.pagina" />
		</on-entry>
	</end-state>


</flow>