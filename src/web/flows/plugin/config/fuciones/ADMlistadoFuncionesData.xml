<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">

    <var name="dto" class="es.pfsgroup.plugin.recovery.config.funciones.dto.ADMDtoBuscarFunciones"/>

    
    <!--a partir de este momento sï¿½lo enviamos ajax -->
    <end-state id="listado" view="plugin/config/funciones/listadoFuncionesJSON" >
    	<secured attributes="ROLE_ADMIN" match="any" />
		<on-entry>
			<evaluate expression="binder.bindAndValidate(flowRequestContext,dto)" />
			<evaluate expression="executor.execute('ADMFuncionManager.buscaFunciones',dto)" result="flowScope.pagina"/>
		</on-entry>
	</end-state>
	
    
</flow>