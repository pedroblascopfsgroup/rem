<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">

	<input name="asuntoId" required="true" type="java.lang.Long"/>
	<input name="nombre" required="true" type="java.lang.String"/>
	<input name="descripcion" required="true" type="java.lang.String"/>
	    
    <end-state id="listado" view="file" >
		<on-entry>
			<evaluate expression="executor.execute('plugin.iplus.bajarAdjunto', asuntoId, nombre, descripcion)" result="flowScope.fileItem"/>
		</on-entry>
	</end-state>
    
</flow>